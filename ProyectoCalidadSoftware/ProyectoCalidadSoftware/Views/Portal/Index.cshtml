@{
    ViewData["Title"] = "Bienvenido a la Clínica";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";  // usa el layout público
}

<section class="hero-public text-center">
    <div class="container py-5">
        <h1 class="display-5 fw-bold">Te cuidamos, te acompañamos</h1>
        <p class="lead mb-4">Clínica Obstétrica – atención integral en embarazo, parto y puerperio.</p>
        <a href="/Portal/Citas" class="btn btn-light btn-lg text-primary fw-semibold shadow-sm">
            <i class="bi bi-calendar-check"></i> Reservar cita
        </a>
        <a href="/Portal/Servicios" class="btn btn-outline-light btn-lg ms-2 fw-semibold">
            <i class="bi bi-heart-pulse"></i> Conoce nuestros servicios
        </a>
    </div>
</section>

<section class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary">Nuestros servicios</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-heart display-5 text-primary mb-3"></i>
                    <h5>Control prenatal</h5>
                    <p class="text-muted">Seguimiento de tu embarazo mes a mes con personal especializado.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-hospital display-5 text-primary mb-3"></i>
                    <h5>Parto y atención obstétrica</h5>
                    <p class="text-muted">Asistencia segura para ti y tu bebé durante el nacimiento.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-motherboard display-5 text-primary mb-3"></i>
                    <h5>Seguimiento puerperio</h5>
                    <p class="text-muted">Cuidado y monitoreo de la madre hasta 6 meses después del parto.</p>
                </div>
            </div>
        </div>
    </div>
</section>
