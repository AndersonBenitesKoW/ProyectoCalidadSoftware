@model ProyectoCalidadSoftware.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse - Clínica Maternal";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<div class="container">
    <div class="main-content register-main">
        <div class="branding-section" style="display: block; position: relative;">
            <video autoplay muted loop class="background-video" controls>
                <source src="~/videos/embarazada.mp4" type="video/mp4">
                Tu navegador no soporta el elemento video.
            </video>
        </div>

        <div class="auth-section">
            <div class="auth-card animate__animated">

                <h2 style="color:white; margin-bottom:1rem;" class="animate__animated">
                    <i class="fas fa-user-plus"></i> Crear cuenta
                </h2>

                <form asp-controller="Portal" asp-action="Register" method="post" class="auth-form active">

                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger message-container"></div>

                    <div class="form-group animate__animated">
                        <label asp-for="Username">
                            <i class="fas fa-user"></i> Usuario
                        </label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated">
                        <label asp-for="Email">
                            <i class="fas fa-envelope"></i> Correo electrónico
                        </label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated">
                        <label asp-for="Password">
                            <i class="fas fa-lock"></i> Contraseña
                        </label>
                        <div class="password-input">
                            <input asp-for="Password" class="form-control" />
                            <button type="button" class="toggle-password" data-target="Password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated">
                        <label asp-for="ConfirmPassword">
                            <i class="fas fa-lock"></i> Confirmar contraseña
                        </label>
                        <div class="password-input">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <button type="button" class="toggle-password" data-target="ConfirmPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated">
                    </div>

                    <div class="form-group animate__animated">
                        <label asp-for="PrivacyAccepted" class="checkbox-label privacy-label">
                            <input asp-for="PrivacyAccepted" class="form-check-input" />
                            <i class="fas fa-file-contract"></i>
                            Acepto la
                            <button type="button" class="privacy-link">Declaratoria de Privacidad</button>
                        </label>
                        <span asp-validation-for="PrivacyAccepted" class="text-danger"></span>
                    </div>

                    <button type="submit" class="submit-btn">
                        <i class="fas fa-user-plus"></i> Registrarme
                    </button>
                </form>

                <div style="margin-top:1.25rem; text-align:center; color:white;">
                    ¿Ya tienes cuenta?
                    <a asp-action="Login" asp-controller="Portal" style="color:#fff; text-decoration:underline; font-weight:600;">Inicia sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animar la tarjeta principal
            const card = document.querySelector('.auth-card');
            setTimeout(() => {
                card.classList.add('animate__fadeInUp');
            }, 100);

            // Animar el título
            const title = document.querySelector('h2');
            setTimeout(() => {
                title.classList.add('animate__fadeIn');
            }, 300);

            // Animar los grupos de formulario secuencialmente
            const groups = document.querySelectorAll('.form-group');
            groups.forEach((group, index) => {
                setTimeout(() => {
                    group.classList.add('animate__fadeInLeft');
                }, 500 + (index * 200));
            });

            // Animar el botón de submit
            const submitBtn = document.querySelector('.submit-btn');
            setTimeout(() => {
                submitBtn.classList.add('animate__animated', 'animate__bounceIn');
            }, 1500);
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}