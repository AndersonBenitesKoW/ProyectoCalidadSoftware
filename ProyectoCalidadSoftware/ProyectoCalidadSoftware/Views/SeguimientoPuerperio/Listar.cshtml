@model IEnumerable<CapaEntidad.entSeguimientoPuerperio>
@{
    ViewData["Title"] = "Seguimiento Puerperio";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0"><i class="bi bi-heart-pulse"></i> @ViewData["Title"]</h1>
        <p class="text-muted mb-0">Seguimiento de pacientes post-parto</p>
    </div>
    <a asp-action="Registrar" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Registrar Seguimiento
    </a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert"><i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5"><h4 class="text-muted">No hay seguimientos registrados</h4></div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Paciente</th>
                            <th>Fecha</th>
                            <th>Días Posparto</th>
                            <th>Profesional</th>
                            <th>PA (sis/dia)</th>
                            <th>Temp (°C)</th>
                            <th>Lactancia</th>
                            <th>Signos Infección</th>
                            <th>Método PF</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombrePaciente</td>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@item.DiasPosparto</td>
                                <td>@item.NombreProfesional</td>
                                <td>@(item.PA_Sistolica.HasValue && item.PA_Diastolica.HasValue ? $"{item.PA_Sistolica}/{item.PA_Diastolica}" : "-")</td>
                                <td>@item.Temp_C</td>
                                <td>@item.Lactancia</td>
                                <td>@(item.SignosInfeccion ? "Sí" : "No")</td>
                                <td>@item.NombreMetodoPF</td>
                                <td class="text-center">
                                    @{
                                        string clase = item.Estado ? "bg-success" : "bg-danger";
                                        string texto = item.Estado ? "Activo" : "Inhabilitado";
                                    }
                                    <span class="badge @clase">@texto</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.IdPuerperio" class="btn btn-sm btn-outline-info" title="Detalles"><i class="bi bi-search"></i></a>
                                        <a asp-action="Editar" asp-route-id="@item.IdPuerperio" class="btn btn-sm btn-outline-warning" title="Editar"><i class="bi bi-pencil-fill"></i></a>
                                        @if (item.Estado)
                                        {
                                            <a asp-action="Inhabilitar" asp-route-id="@item.IdPuerperio" class="btn btn-sm btn-outline-danger" title="Inhabilitar"><i class="bi bi-trash-fill"></i></a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>