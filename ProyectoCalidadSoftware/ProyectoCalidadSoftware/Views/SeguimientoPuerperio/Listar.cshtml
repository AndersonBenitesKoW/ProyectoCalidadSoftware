@model IEnumerable<CapaEntidad.entSeguimientoPuerperio>
@{
    ViewData["Title"] = "Seguimiento del Puerperio";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0"><i class="bi bi-heart"></i> Seguimiento del Puerperio</h1>
    <a asp-action="Registrar" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nuevo Seguimiento</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">No hay seguimientos registrados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Embarazo</th>
                    <th>Fecha</th>
                    <th>Observación</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.IdSeguimientoPuerperio</td>
                        <td>@s.IdEmbarazo</td>
                        <td>@s.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@(string.IsNullOrWhiteSpace(s.Observaciones) ? "-" : (s.Observaciones!.Length > 30 ? s.Observaciones.Substring(0, 30) + "..." : s.Observaciones))</td>
                        <td>
                            @if (s.Estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Inhabilitar" asp-route-id="@s.IdSeguimientoPuerperio"
                               class="btn btn-sm btn-outline-danger" title="Inhabilitar">
                                <i class="bi bi-x-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
