@model CapaEntidad.entSeguimientoPuerperio
@{
    ViewData["Title"] = "Registrar Seguimiento de Puerperio";
}
<h1><i class="bi bi-plus-square"></i> @ViewData["Title"]</h1>

<form asp-action="Registrar" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="IdEmbarazo" class="form-label">ID Embarazo</label>
            <input asp-for="IdEmbarazo" class="form-control" type="number" />
            <span asp-validation-for="IdEmbarazo" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Fecha" class="form-label">Fecha</label>
            <input asp-for="Fecha" class="form-control" type="date" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-check mb-3">
            <input asp-for="Estado" class="form-check-input" />
            <label asp-for="Estado" class="form-check-label">Activo</label>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones" class="form-label">Observación</label>
        <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Listar" class="btn btn-secondary">Volver</a>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
