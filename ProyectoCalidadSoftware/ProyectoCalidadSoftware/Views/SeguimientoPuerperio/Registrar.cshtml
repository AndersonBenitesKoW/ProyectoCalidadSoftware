@model CapaEntidad.entSeguimientoPuerperio
@{
    ViewData["Title"] = "Registrar Seguimiento Puerperio";

    var embarazosModal = ViewBag.EmbarazosModal as IEnumerable<CapaEntidad.entEmbarazo>;
    var profesionalesModal = ViewBag.ProfesionalesModal as IEnumerable<CapaEntidad.entProfesionalSalud>;
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-file-earmark-medical me-2"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Registrar" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Estado" />

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- ================== INFORMACIÓN GENERAL ================== -->
                    <h5><i class="bi bi-info-circle me-2"></i>Información General</h5>
                    <hr class="mt-0" />

                    <div class="row">
                        <!-- Embarazo (Paciente) -->
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Embarazo (Paciente)</label>
                            <div class="input-group">
                                <input class="form-control"
                                       id="txtEmbarazo"
                                       readonly
                                       placeholder="-- Seleccione --" />
                                <input asp-for="IdEmbarazo" type="hidden" id="hdnIdEmbarazo" />
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalEmbarazo">
                                    Buscar
                                </button>
                            </div>
                            <span asp-validation-for="IdEmbarazo" class="text-danger small"></span>
                        </div>

                        <!-- Profesional -->
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Profesional</label>
                            <div class="input-group">
                                <input class="form-control"
                                       id="txtProfesional"
                                       readonly
                                       placeholder="-- Seleccione --" />
                                <input asp-for="IdProfesional" type="hidden" id="hdnIdProfesional" />
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalProfesional">
                                    Buscar
                                </button>
                            </div>
                            <span asp-validation-for="IdProfesional" class="text-danger small"></span>
                        </div>

                        <!-- Fecha -->
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Fecha" class="form-control" type="date" />
                                <label asp-for="Fecha">Fecha del Seguimiento</label>
                                <span asp-validation-for="Fecha" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- ================== EVALUACIÓN CLÍNICA ================== -->
                    <h5 class="mt-4"><i class="bi bi-heart-pulse me-2"></i>Evaluación Clínica</h5>
                    <hr class="mt-0" />

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PA_Sistolica" class="form-control" type="number" />
                                <label asp-for="PA_Sistolica"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PA_Diastolica" class="form-control" type="number" />
                                <label asp-for="PA_Diastolica"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Temp_C" class="form-control" type="number" step="0.1" />
                                <label asp-for="Temp_C"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="AlturaUterinaPP_cm" class="form-control" type="number" step="0.1" />
                                <label asp-for="AlturaUterinaPP_cm"></label>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Loquios" class="form-control" />
                                <label asp-for="Loquios">Loquios</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Lactancia" class="form-control" />
                                <label asp-for="Lactancia">Lactancia</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="DiasPosparto" class="form-control" type="number" />
                                <label asp-for="DiasPosparto">Días Posparto</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <select asp-for="SignosInfeccion" class="form-select">
                                    <option value="">-- Seleccione --</option>
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </select>
                                <label asp-for="SignosInfeccion"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="TamizajeDepresion" class="form-control" />
                                <label asp-for="TamizajeDepresion"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="InvolucionUterina" class="form-control" />
                                <label asp-for="InvolucionUterina">Involución Uterina</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input name="HemorragiaResidual" type="checkbox" value="true" class="form-check-input" />
                                <label class="form-check-label">Hemorragia Residual</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="ApoyoLactancia" class="form-check-input" />
                                <label asp-for="ApoyoLactancia" class="form-check-label">Apoyo Lactancia</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="ConsejoPlanificacion" class="form-check-input" />
                                <label asp-for="ConsejoPlanificacion" class="form-check-label">Consejo Planificación</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="VisitaDomiciliariaFecha" class="form-control" type="date" />
                                <label asp-for="VisitaDomiciliariaFecha">Fecha Visita Domiciliaria</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="SeguroTipo" class="form-control" />
                                <label asp-for="SeguroTipo">Tipo de Seguro</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <textarea asp-for="ComplicacionesMaternas" class="form-control" style="height: 80px"></textarea>
                                <label asp-for="ComplicacionesMaternas">Complicaciones Maternas</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check mb-3">
                                <input asp-for="Derivacion" class="form-check-input" />
                                <label asp-for="Derivacion" class="form-check-label">Derivación</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="EstablecimientoAtencion" class="form-control" />
                                <label asp-for="EstablecimientoAtencion">Establecimiento de Atención</label>
                            </div>
                        </div>
                    </div>

                    <!-- ================== PF Y NOTAS ================== -->
                    <h5 class="mt-4"><i class="bi bi-sticky me-2"></i>Planificación Familiar y Notas</h5>
                    <hr class="mt-0" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="IdMetodoPF" class="form-select" asp-items="@ViewBag.ListaMetodosPF">
                                    <option value="">-- Seleccione Método PF --</option>
                                </select>
                                <label asp-for="IdMetodoPF">Método Planificación</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Observaciones" class="form-control" style="height: 100px"></textarea>
                                <label asp-for="Observaciones">Observaciones</label>
                            </div>
                        </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Registrar Seguimiento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ============= MODAL EMBARAZO ============= -->
<div class="modal fade" id="modalEmbarazo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Embarazo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarEmbarazo"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="text"
                               id="buscarEmbarazo"
                               class="form-control form-control-sm text-end"
                               placeholder="DNI"
                               maxlength="8"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>DNI</th>
                            <th>Paciente</th>
                            <th>FUR</th>
                            <th>FPP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (embarazosModal != null)
                        {
                            foreach (var e in embarazosModal)
                            {
                                <tr>
                                    <td>@e.IdEmbarazo</td>
                                    <td>@e.DNIPaciente</td>
                                    <td>@e.NombrePaciente</td>
                                    <td>@e.FUR?.ToString("dd/MM/yyyy")</td>
                                    <td>@e.FPP?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarEmbarazo"
                                                data-id="@e.IdEmbarazo"
                                                data-nombre="@e.NombrePaciente">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ============= MODAL PROFESIONAL ============= -->
<div class="modal fade" id="modalProfesional" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Profesional de Salud</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarProfesional"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarProfesional"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>CMP</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (profesionalesModal != null)
                        {
                            foreach (var pr in profesionalesModal)
                            {
                                <tr>
                                    <td>@pr.IdProfesional</td>
                                    <td>@pr.CMP</td>
                                    <td>@($"{pr.Nombres} {pr.Apellidos}")</td>
                                    <td>@pr.Especialidad</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarProfesional"
                                                data-id="@pr.IdProfesional"
                                                data-nombre="@($"{pr.Nombres} {pr.Apellidos}")">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // -------- Selección desde los modals --------
            document.addEventListener('click', function (e) {

                // Embarazo
                if (e.target.classList.contains('btnSeleccionarEmbarazo')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdEmbarazo').value = id;
                    document.getElementById('txtEmbarazo').value   = nombre;

                    const modalEl = document.getElementById('modalEmbarazo');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Profesional
                if (e.target.classList.contains('btnSeleccionarProfesional')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdProfesional').value = id;
                    document.getElementById('txtProfesional').value   = nombre;

                    const modalEl = document.getElementById('modalProfesional');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            });

            // -------- Búsquedas por ID --------
            function configurarBusqueda(btnId, inputId, selectorFilas, colIdx) {
                const btn = document.getElementById(btnId);
                const txt = document.getElementById(inputId);

                if (!btn || !txt) return;

                btn.addEventListener('click', function () {
                    const filtro = txt.value.trim();
                    const filas  = document.querySelectorAll(selectorFilas);

                    filas.forEach(fila => {
                        const id = fila.children[colIdx].innerText.trim();
                        fila.style.display = (filtro === '' || id === filtro) ? '' : 'none';
                    });
                });
            }

            configurarBusqueda('btnBuscarEmbarazo',   'buscarEmbarazo',   '#modalEmbarazo tbody tr',   1);
            configurarBusqueda('btnBuscarProfesional', 'buscarProfesional', '#modalProfesional tbody tr', 0);
        });
    </script>
}
