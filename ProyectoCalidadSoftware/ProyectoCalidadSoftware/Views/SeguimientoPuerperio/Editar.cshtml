@model CapaEntidad.entSeguimientoPuerperio
@{
    ViewData["Title"] = "Editar Seguimiento Puerperio";
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Editar" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="IdPuerperio" />

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <h5><i class="bi bi-info-circle me-2"></i>Información General</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <select asp-for="IdEmbarazo" class="form-select" asp-items="@ViewBag.ListaEmbarazos" required>
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <label asp-for="IdEmbarazo">Embarazo (Paciente)</label>
                                <span asp-validation-for="IdEmbarazo" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <select asp-for="IdProfesional" class="form-select" asp-items="@ViewBag.ListaProfesionales">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <label asp-for="IdProfesional">Profesional</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Fecha" class="form-control" type="date" />
                                <label asp-for="Fecha">Fecha del Seguimiento</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-heart-pulse me-2"></i>Evaluación Clínica</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="PA_Sistolica" class="form-control" type="number" /><label asp-for="PA_Sistolica"></label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="PA_Diastolica" class="form-control" type="number" /><label asp-for="PA_Diastolica"></label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="Temp_C" class="form-control" type="number" step="0.1" /><label asp-for="Temp_C"></label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="AlturaUterinaPP_cm" class="form-control" type="number" step="0.1" /><label asp-for="AlturaUterinaPP_cm"></label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="Loquios" class="form-control" /><label asp-for="Loquios">Loquios</label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="Lactancia" class="form-control" /><label asp-for="Lactancia">Lactancia</label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <select asp-for="SignosInfeccion" class="form-select"> <option value="">-- Seleccione --</option> <option value="true">Sí</option> <option value="false">No</option> </select> <label asp-for="SignosInfeccion"></label> </div> </div>
                        <div class="col-md-3"> <div class="form-floating mb-3"> <input asp-for="TamizajeDepresion" class="form-control" /><label asp-for="TamizajeDepresion"></label> </div> </div>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-sticky me-2"></i>Planificación Familiar y Notas</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="IdMetodoPF" class="form-select" asp-items="@ViewBag.ListaMetodosPF">
                                    <option value="">-- Seleccione Método PF --</option>
                                </select>
                                <label asp-for="IdMetodoPF">Método Planificación</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Observaciones" class="form-control" placeholder="Observaciones" style="height: 100px"></textarea>
                                <label asp-for="Observaciones">Observaciones</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Estado" class="form-check-label">Seguimiento Activo</label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save me-2"></i> Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}