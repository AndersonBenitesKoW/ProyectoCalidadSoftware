@model CapaEntidad.entCita

@{
    ViewData["Title"] = "Anular Cita Médica";
}

<style>
    .delete-confirmation {
        max-width: 700px;
        margin: 2rem auto;
        border: 1px solid #dee2e6;
        border-radius: .5rem;
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
    }

    .delete-header {
        background-color: #f8d7da;
        color: #721c24;
        padding: 1.5rem;
        border-bottom: 1px solid #f5c6cb;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
    }

        .delete-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

    .details-list dt {
        font-weight: 600;
    }
</style>


<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Anulación</h1>
        <h3>¿Está seguro de que desea anular esta cita médica?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles de la Cita</h4>
        <dl class="row details-list">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-hash"></i> ID Cita</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdCita)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person"></i> Paciente</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombrePaciente)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-lines-fill"></i> Profesional</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreProfesional)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-calendar-event"></i> Fecha Cita</dt>
            <dd class="col-sm-9">@Model.FechaCita.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-flag"></i> Estado Actual</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreEstado)</dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción marcará la cita como "Cita anulada".
        </div>

        <form asp-action="Anular" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdCita" />

            <div class="form-floating mb-3">
                <textarea asp-for="MotivoAnulacion" class="form-control" placeholder="Motivo de anulación" style="height: 100px" required></textarea>
                <label asp-for="MotivoAnulacion">Motivo de Anulación (Obligatorio)</label>
                <span asp-validation-for="MotivoAnulacion" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill"></i> Confirmar Anulación
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}