@model CapaEntidad.entCita

@{
    ViewData["Title"] = "Anular Cita Médica";
}

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Anulación</h1>
        <h3>¿Está seguro de que desea anular esta cita médica?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles de la Cita</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-hash"></i> ID Cita
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdCita)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> ID Paciente
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdPaciente)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> ID Recepcionista
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdRecepcionista)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-lines-fill"></i> ID Profesional
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdProfesional)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-event"></i> Fecha Cita
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaCita)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-text"></i> Motivo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Motivo)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-flag"></i> Estado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdEstadoCita)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-sticky"></i> Observación
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Observacion)
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción no se puede deshacer. La cita médica será anulada permanentemente.
        </div>

        <form asp-action="Anular" class="mt-4">
            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Anular Cita" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>