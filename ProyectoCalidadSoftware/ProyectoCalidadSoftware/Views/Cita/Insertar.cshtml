@model CapaEntidad.entCita

@{
    ViewData["Title"] = "Insertar Nueva Cita";

    var pacientesModal = ViewBag.PacientesModal as IEnumerable<CapaEntidad.entPaciente>;
    var profesionalesModal = ViewBag.ProfesionalesModal as IEnumerable<CapaEntidad.entProfesionalSalud>;
    var embarazosModal = ViewBag.EmbarazosModal as IEnumerable<CapaEntidad.entEmbarazo>;
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-calendar-plus me-2"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">

                <form asp-action="Insertar" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- PACIENTE (select con modal) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person me-2"></i>Paciente
                        </label>
                        <div class="input-group">
                            <select asp-for="IdPaciente" class="form-select">
                                <option value="">-- Seleccione --</option>
                                @if (pacientesModal != null)
                                {
                                    foreach (var p in pacientesModal)
                                    {
                                        <option value="@p.IdPaciente">@(p.Nombres + " " + p.Apellidos)</option>
                                    }
                                }
                            </select>
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalPaciente">
                                Buscar
                            </button>
                        </div>
                        <span asp-validation-for="IdPaciente" class="text-danger small"></span>
                    </div>

                    <!-- PROFESIONAL (select con modal, opcional) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person-lines-fill me-2"></i>Profesional de Salud (Opcional)
                        </label>
                        <div class="input-group">
                            <select asp-for="IdProfesional" class="form-select">
                                <option value="">-- Seleccione --</option>
                                @if (profesionalesModal != null)
                                {
                                    foreach (var pr in profesionalesModal)
                                    {
                                        <option value="@pr.IdProfesional">@(pr.Nombres + " " + pr.Apellidos)</option>
                                    }
                                }
                            </select>
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalProfesionalCita">
                                Buscar
                            </button>
                        </div>
                    </div>

                    <!-- EMBARAZO (select con modal, opcional) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-heart-pulse me-2"></i>Embarazo (Si aplica)
                        </label>
                        <div class="input-group">
                            <select asp-for="IdEmbarazo" class="form-select">
                                <option value="">-- Seleccione --</option>
                                @if (embarazosModal != null)
                                {
                                    foreach (var e in embarazosModal)
                                    {
                                        <option value="@e.IdEmbarazo">@e.NombrePaciente</option>
                                    }
                                }
                            </select>
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEmbarazoCita">
                                Buscar
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="FechaCita" class="form-control" type="datetime-local" />
                                <label asp-for="FechaCita"><i class="bi bi-calendar-event me-2"></i>Fecha de la Cita</label>
                                <span asp-validation-for="FechaCita" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Motivo" class="form-control" placeholder="Motivo de la Cita" />
                                <label asp-for="Motivo"><i class="bi bi-chat-text me-2"></i>Motivo de la Cita</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Observacion" class="form-control" placeholder="Observaciones" style="height: 100px"></textarea>
                        <label asp-for="Observacion"><i class="bi bi-sticky me-2"></i>Observación (Opcional)</label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Insertar Cita
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ============ MODAL PACIENTE ============ -->
<div class="modal fade" id="modalPaciente" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarPaciente"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="text"
                               id="buscarPaciente"
                               class="form-control form-control-sm text-end"
                               placeholder="DNI" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Paciente</th>
                            <th>DNI</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pacientesModal != null)
                        {
                            foreach (var p in pacientesModal)
                            {
                                <tr>
                                    <td>@p.IdPaciente</td>
                                    <td>@(p.Nombres + " " + p.Apellidos)</td>
                                    <td>@p.DNI</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarPaciente"
                                                data-id="@p.IdPaciente"
                                                data-nombre="@(p.Nombres + " " + p.Apellidos)">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ============ MODAL PROFESIONAL ============ -->
<div class="modal fade" id="modalProfesionalCita" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Profesional de Salud</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarProfesionalCita"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarProfesionalCita"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>CMP</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (profesionalesModal != null)
                        {
                            foreach (var pr in profesionalesModal)
                            {
                                <tr>
                                    <td>@pr.IdProfesional</td>
                                    <td>@pr.CMP</td>
                                    <td>@(pr.Nombres + " " + pr.Apellidos)</td>
                                    <td>@pr.Especialidad</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarProfesionalCita"
                                                data-id="@pr.IdProfesional"
                                                data-nombre="@(pr.Nombres + " " + pr.Apellidos)">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ============ MODAL EMBARAZO ============ -->
<div class="modal fade" id="modalEmbarazoCita" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Embarazo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarEmbarazoCita"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarEmbarazoCita"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Paciente</th>
                            <th>FUR</th>
                            <th>FPP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (embarazosModal != null)
                        {
                            foreach (var e in embarazosModal)
                            {
                                <tr>
                                    <td>@e.IdEmbarazo</td>
                                    <td>@e.NombrePaciente</td>
                                    <td>@e.FUR?.ToString("dd/MM/yyyy")</td>
                                    <td>@e.FPP?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarEmbarazoCita"
                                                data-id="@e.IdEmbarazo"
                                                data-nombre="@e.NombrePaciente">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Selección desde los modals
            document.addEventListener('click', function (e) {

                // Paciente
                if (e.target.classList.contains('btnSeleccionarPaciente')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdPaciente').value = id;

                    const modalEl = document.getElementById('modalPaciente');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Profesional
                if (e.target.classList.contains('btnSeleccionarProfesionalCita')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdProfesional').value = id;

                    const modalEl = document.getElementById('modalProfesionalCita');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Embarazo
                if (e.target.classList.contains('btnSeleccionarEmbarazoCita')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdEmbarazo').value = id;

                    const modalEl = document.getElementById('modalEmbarazoCita');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            });

            // Buscar Paciente por DNI
            const btnPac = document.getElementById("btnBuscarPaciente");
            const txtPac = document.getElementById("buscarPaciente");
            if (btnPac && txtPac) {
                btnPac.addEventListener("click", function () {
                    const filtro = txtPac.value.trim();
                    const filas = document.querySelectorAll("#modalPaciente tbody tr");

                    filas.forEach(fila => {
                        const dni = fila.children[2].innerText.trim();
                        fila.style.display = (filtro === "" || dni === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Profesional por ID
            const btnProf = document.getElementById("btnBuscarProfesionalCita");
            const txtProf = document.getElementById("buscarProfesionalCita");
            if (btnProf && txtProf) {
                btnProf.addEventListener("click", function () {
                    const filtro = txtProf.value.trim();
                    const filas = document.querySelectorAll("#modalProfesionalCita tbody tr");

                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Embarazo por ID
            const btnEmb = document.getElementById("btnBuscarEmbarazoCita");
            const txtEmb = document.getElementById("buscarEmbarazoCita");
            if (btnEmb && txtEmb) {
                btnEmb.addEventListener("click", function () {
                    const filtro = txtEmb.value.trim();
                    const filas = document.querySelectorAll("#modalEmbarazoCita tbody tr");

                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }
        });
    </script>
}
