@model IEnumerable<CapaEntidad.entCita>

@{
    ViewData["Title"] = "Listar Citas";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-calendar-check"></i> Citas Médicas</h1>
            <p class="text-muted mb-0">Gestión de citas programadas para pacientes</p>
        </div>
        <a asp-controller="Cita" asp-action="Insertar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Cita
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay citas registradas</h4>
            <p class="text-muted">Comience programando una nueva cita médica.</p>
            <a asp-controller="Cita" asp-action="Insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Programar Primera Cita
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-hash"></i> ID Cita</th>
                        <th><i class="bi bi-person"></i> Paciente</th>
                        <th><i class="bi bi-person-badge"></i> Recepcionista</th>
                        <th><i class="bi bi-person-lines-fill"></i> Profesional</th>
                        <th><i class="bi bi-calendar-event"></i> Fecha</th>
                        <th><i class="bi bi-chat-text"></i> Motivo</th>
                        <th><i class="bi bi-flag"></i> Estado</th>
                        <th><i class="bi bi-gear"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdCita</td>
                            <td>@item.IdPaciente</td>
                            <td>@item.IdRecepcionista</td>
                            <td>@item.IdProfesional</td>
                            <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Motivo))
                                {
                                    <span title="@item.Motivo">
                                        @(item.Motivo.Length > 30 ? item.Motivo.Substring(0, 30) + "..." : item.Motivo)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin motivo</span>
                                }
                            </td>
                            <td>
                                @{
                                    // Si tienes una propiedad EstadoDescripcion, cámbiala aquí
                                    string estado = item.IdEstadoCita switch
                                    {
                                        1 => "Programada",
                                        2 => "Atendida",
                                        3 => "Anulada",
                                        _ => "Desconocido"
                                    };
                                    string clase = estado == "Anulada" ? "text-danger" :
                                    estado == "Atendida" ? "text-success" : "text-primary";
                                }
                                <span class="@clase fw-semibold">@estado</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Cita"
                                       asp-action="Anular"
                                       asp-route-id="@item.IdCita"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Anular cita">
                                        <i class="bi bi-x-circle"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Total de Citas:</strong> @Model.Count() programadas.
            </div>
        </div>
    }
</div>
