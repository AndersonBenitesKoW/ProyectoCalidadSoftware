@model IEnumerable<CapaEntidad.entCita>

@{
    ViewData["Title"] = "Listar Citas";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-calendar-check"></i> Citas Médicas</h1>
            <p class="text-muted mb-0">Gestión de citas programadas para pacientes</p>
        </div>
        <a asp-action="Insertar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Cita
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-hash"></i> ID Cita</th>
                    <th><i class="bi bi-person"></i> ID Paciente</th>
                    <th><i class="bi bi-person-badge"></i> ID Recepcionista</th>
                    <th><i class="bi bi-person-lines-fill"></i> ID Profesional</th>
                    <th><i class="bi bi-calendar-event"></i> Fecha Cita</th>
                    <th><i class="bi bi-chat-text"></i> Motivo</th>
                    <th><i class="bi bi-flag"></i> Estado</th>
                    <th><i class="bi bi-gear"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdCita)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdPaciente)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdRecepcionista)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdProfesional)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCita)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Motivo)) {
                                <span title="@item.Motivo">@(item.Motivo.Length > 30 ? item.Motivo.Substring(0, 30) + "..." : item.Motivo)</span>
                            } else {
                                <span class="text-muted">Sin motivo</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.IdEstadoCita)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Actualizar" asp-route-id="@item.IdCita" class="btn btn-sm btn-outline-primary" title="Actualizar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Eliminar" asp-route-id="@item.IdCita" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any()) {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay citas registradas</h4>
            <p class="text-muted">Comience programando una nueva cita médica.</p>
            <a asp-action="Insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Programar Primera Cita
            </a>
        </div>
    } else {
        <div class="mt-3">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Total de Citas:</strong> @Model.Count() citas programadas.
            </div>
        </div>
    }
</div>