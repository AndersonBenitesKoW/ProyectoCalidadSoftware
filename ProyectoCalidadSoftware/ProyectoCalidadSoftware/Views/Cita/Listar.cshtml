@model IEnumerable<CapaEntidad.entCita>

@{
    ViewData["Title"] = "Listar Citas";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-calendar-check"></i> Citas Médicas</h1>
            <p class="text-muted mb-0">Gestión de citas programadas para pacientes</p>
        </div>
        <a asp-controller="Cita" asp-action="Insertar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Cita
        </a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Ok"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                    <h4 class="text-muted mt-3">No hay citas registradas</h4>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-hash"></i> ID</th>
                                <th><i class="bi bi-person"></i> Paciente</th>
                                <th><i class="bi bi-person-lines-fill"></i> Profesional</th>
                                <th><i class="bi bi-calendar-event"></i> Fecha</th>
                                <th><i class="bi bi-chat-text"></i> Motivo</th>
                                <th><i class="bi bi-flag"></i> Estado</th>
                                <th class="text-end"><i class="bi bi-gear"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdCita</td>
                                    <td>@item.NombrePaciente</td>
                                    <td>@item.NombreProfesional</td>
                                    <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Motivo))
                                        {
                                            <span title="@item.Motivo">
                                                @(item.Motivo.Length > 30 ? item.Motivo.Substring(0, 30) + "..." : item.Motivo)
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            // Corrección basada en tu imagen de BD
                                            string clase = item.NombreEstado == "Cita anulada" ? "text-danger" :
                                            item.NombreEstado == "Cita atendida" ? "text-success" :
                                            item.NombreEstado == "Paciente no asistió" ? "text-warning" :
                                            "text-primary"; // Default para "Cita programada"
                                        }
                                        <span class="@clase fw-semibold">@item.NombreEstado</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <!-- Botón PDF NUEVO -->
                                            <a asp-action="DescargarPdf" asp-route-id="@item.IdCita" class="btn btn-sm btn-outline-success" title="Descargar PDF">
                                                <i class="bi bi-file-pdf"></i>
                                            </a>

                                            <a asp-action="DetallesCita" asp-route-id="@item.IdCita" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                <i class="bi bi-search"></i>
                                            </a>

                                            @if (item.NombreEstado == "Cita programada")
                                            {
                                                <a asp-controller="Cita"
                                                   asp-action="Anular"
                                                   asp-route-id="@item.IdCita"
                                                   class="btn btn-sm btn-outline-danger"
                                                   title="Anular cita">
                                                    <i class="bi bi-x-circle"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>