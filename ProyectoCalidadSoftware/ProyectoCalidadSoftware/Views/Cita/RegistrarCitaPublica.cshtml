@model CapaEntidad.entCita

@{
    ViewData["Title"] = "Insertar Nueva Cita";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";

    var pacientesModal = ViewBag.PacientesModal as IEnumerable<CapaEntidad.entPaciente>;
    var profesionalesModal = ViewBag.ProfesionalesModal as IEnumerable<CapaEntidad.entProfesionalSalud>;
    var embarazosModal = ViewBag.EmbarazosModal as IEnumerable<CapaEntidad.entEmbarazo>;
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-calendar-plus me-2"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">

                <form asp-action="RegistrarCitaPublica" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- PACIENTE (input readonly con modal) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person me-2"></i>Paciente
                        </label>
                        <div class="input-group">
                            <input type="text" id="pacienteSeleccionado" class="form-control" readonly placeholder="Seleccione un paciente" />
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalPaciente">
                                Buscar
                            </button>
                        </div>
                        <input asp-for="IdPaciente" type="hidden" />
                        <span asp-validation-for="IdPaciente" class="text-danger small"></span>
                    </div>

                    <!-- PROFESIONAL (select con modal, obligatorio) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person-lines-fill me-2"></i>Profesional de Salud *
                        </label>
                        <div class="input-group">
                            <select asp-for="IdProfesional" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                                @if (profesionalesModal != null)
                                {
                                    foreach (var pr in profesionalesModal)
                                    {
                                        <option value="@pr.IdProfesional">@(pr.Nombres + " " + pr.Apellidos)</option>
                                    }
                                }
                            </select>
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalProfesionalCita">
                                Buscar
                            </button>
                        </div>
                        <span asp-validation-for="IdProfesional" class="text-danger small"></span>
                    </div>

                    <!-- EMBARAZO (input readonly automático, opcional) -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-heart-pulse me-2"></i>Embarazo (Si aplica)
                        </label>
                        <input type="text" id="embarazoSeleccionado" class="form-control" readonly placeholder="Embarazo seleccionado automáticamente" />
                        <input asp-for="IdEmbarazo" type="hidden" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="date" id="fechaSeleccionada" class="form-control" />
                                <label><i class="bi bi-calendar-event me-2"></i>Fecha de la Cita</label>
                            </div>
                            <input asp-for="FechaCita" type="hidden" />
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Motivo" class="form-control" placeholder="Motivo de la Cita" />
                                <label asp-for="Motivo"><i class="bi bi-chat-text me-2"></i>Motivo de la Cita</label>
                            </div>
                        </div>
                    </div>

                    <!-- GRILLA DE SLOTS -->
                    <div id="slotsContainer" class="mb-3" style="display: none;">
                        <h5>Horarios Disponibles</h5>
                        <div id="slotsGrid" class="row g-2">
                            <!-- Los slots se cargarán aquí dinámicamente -->
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Observacion" class="form-control" placeholder="Observaciones" style="height: 100px"></textarea>
                        <label asp-for="Observacion"><i class="bi bi-sticky me-2"></i>Observación (Opcional)</label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Insertar Cita
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- ============ MODAL PROFESIONAL ============ -->
<div class="modal fade" id="modalProfesionalCita" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Profesional de Salud</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarProfesionalCita"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarProfesionalCita"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>CMP</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (profesionalesModal != null)
                        {
                            foreach (var pr in profesionalesModal)
                            {
                                <tr>
                                    <td>@pr.IdProfesional</td>
                                    <td>@pr.CMP</td>
                                    <td>@(pr.Nombres + " " + pr.Apellidos)</td>
                                    <td>@pr.Especialidad</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarProfesionalCita"
                                                data-id="@pr.IdProfesional"
                                                data-nombre="@(pr.Nombres + " " + pr.Apellidos)">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<!-- ============ MODAL PACIENTE ============ -->
<div class="modal fade" id="modalPaciente" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarPaciente"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="text"
                               id="buscarPaciente"
                               class="form-control form-control-sm text-end"
                               placeholder="DNI" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Paciente</th>
                            <th>DNI</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- La tabla se llenará dinámicamente con AJAX al buscar por DNI -->
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Cargar slots al cambiar profesional o fecha
            const profesionalSelect = document.getElementById('IdProfesional');
            const fechaInput = document.getElementById('fechaSeleccionada');
            const slotsContainer = document.getElementById('slotsContainer');
            const slotsGrid = document.getElementById('slotsGrid');

            function cargarSlots() {
                const idProfesional = profesionalSelect.value;
                const fecha = fechaInput.value;
                const idPaciente = document.getElementById('IdPaciente').value;
                if (!idProfesional || !fecha || !idPaciente) {
                    slotsContainer.style.display = 'none';
                    return;
                }

                fetch(`/Cita/ObtenerSlotsDisponibles?idProfesional=${idProfesional}&fecha=${fecha}&idPaciente=${idPaciente}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            slotsGrid.innerHTML = '';
                            data.slots.forEach(slot => {
                                const col = document.createElement('div');
                                col.className = 'col-6 col-md-3';
                                const btn = document.createElement('button');
                                btn.type = 'button';
                                btn.className = `btn ${slot.disponible ? 'btn-success' : 'btn-danger'} w-100`;
                                btn.textContent = slot.hora;
                                btn.disabled = !slot.disponible;
                                if (slot.disponible) {
                                    btn.addEventListener('click', () => seleccionarSlot(fecha, slot.hora));
                                }
                                col.appendChild(btn);
                                slotsGrid.appendChild(col);
                            });
                            slotsContainer.style.display = 'block';
                        } else {
                            alert(data.message);
                            slotsContainer.style.display = 'none';
                        }
                    })
                    .catch(error => {
                        console.error('Error al cargar slots:', error);
                        slotsContainer.style.display = 'none';
                    });
            }

            function seleccionarSlot(fecha, hora) {
                const fechaHora = `${fecha}T${hora}:00`;
                document.getElementById('FechaCita').value = fechaHora;
                // Opcional: marcar el botón como seleccionado
            }

            profesionalSelect.addEventListener('change', cargarSlots);
            fechaInput.addEventListener('change', cargarSlots);
            document.getElementById('IdPaciente').addEventListener('change', cargarSlots);

            // Buscar Paciente por DNI
            const btnPac = document.getElementById("btnBuscarPaciente");
            const txtPac = document.getElementById("buscarPaciente");
            if (btnPac && txtPac) {
                btnPac.addEventListener("click", function () {
                    const dni = txtPac.value.trim();
                    if (!dni) {
                        alert("Ingrese un DNI para buscar.");
                        return;
                    }

                    fetch(`/Cita/BuscarPacientePorDNI?dni=${encodeURIComponent(dni)}`)
                        .then(response => response.json())
                        .then(data => {
                            const tbody = document.querySelector("#modalPaciente tbody");
                            tbody.innerHTML = ""; // Limpiar tabla

                            if (data.success) {
                                const tr = document.createElement("tr");
                                tr.innerHTML = `
                                    <td>${data.paciente.id}</td>
                                    <td>${data.paciente.nombre}</td>
                                    <td>${data.paciente.dni}</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarPaciente"
                                                data-id="${data.paciente.id}"
                                                data-nombre="${data.paciente.nombre}">
                                            Seleccionar
                                        </button>
                                    </td>
                                `;
                                tbody.appendChild(tr);
                            } else {
                                const tr = document.createElement("tr");
                                tr.innerHTML = `<td colspan="4" class="text-danger text-center">${data.message}</td>`;
                                tbody.appendChild(tr);
                            }
                        })
                        .catch(error => {
                            console.error("Error:", error);
                            const tbody = document.querySelector("#modalPaciente tbody");
                            tbody.innerHTML = '<tr><td colspan="4" class="text-danger text-center">Error al buscar paciente.</td></tr>';
                        });
                });
            }

            // Selección desde los modals
            document.addEventListener('click', function (e) {

                // Paciente
                if (e.target.classList.contains('btnSeleccionarPaciente')) {
                    const id = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');
                    document.getElementById('IdPaciente').value = id;
                    document.getElementById('pacienteSeleccionado').value = nombre;

                    // Buscar último embarazo del paciente
                    fetch(`/Cita/BuscarUltimoEmbarazoPorPacienteId?idPaciente=${id}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                document.getElementById('IdEmbarazo').value = data.embarazo.id;
                                document.getElementById('embarazoSeleccionado').value = data.embarazo.nombre;
                            } else {
                                document.getElementById('IdEmbarazo').value = '';
                                document.getElementById('embarazoSeleccionado').value = '';
                            }
                        })
                        .catch(error => console.error("Error al buscar embarazo:", error));

                    const modalEl = document.getElementById('modalPaciente');
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Profesional
                if (e.target.classList.contains('btnSeleccionarProfesionalCita')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdProfesional').value = id;

                    const modalEl = document.getElementById('modalProfesionalCita');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

            });

            // Buscar Profesional por ID
            const btnProf = document.getElementById("btnBuscarProfesionalCita");
            const txtProf = document.getElementById("buscarProfesionalCita");
            if (btnProf && txtProf) {
                btnProf.addEventListener("click", function () {
                    const filtro = txtProf.value.trim();
                    const filas = document.querySelectorAll("#modalProfesionalCita tbody tr");

                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }

        });
    </script>
}