@model CapaEntidad.entAyudaDiagnosticaOrden

@{
    ViewData["Title"] = "Registrar Ayuda Diagnóstica";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-clipboard-plus"></i> Registrar Ayuda Diagnóstica</h1>
        <h4>Orden de Ayuda Diagnóstica</h4>
    </div>

    <form asp-action="Registrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdAyuda" class="control-label">
                        <i class="bi bi-hash"></i> ID Ayuda
                    </label>
                    <input asp-for="IdAyuda" class="form-control" />
                    <span asp-validation-for="IdAyuda" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdPaciente" class="control-label">
                        <i class="bi bi-person"></i> ID Paciente
                    </label>
                    <input asp-for="IdPaciente" class="form-control" />
                    <span asp-validation-for="IdPaciente" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdEmbarazo" class="control-label">
                        <i class="bi bi-heart-pulse"></i> ID Embarazo
                    </label>
                    <input asp-for="IdEmbarazo" class="form-control" />
                    <span asp-validation-for="IdEmbarazo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdProfesional" class="control-label">
                        <i class="bi bi-person-badge"></i> ID Profesional
                    </label>
                    <input asp-for="IdProfesional" class="form-control" />
                    <span asp-validation-for="IdProfesional" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdTipoAyuda" class="control-label">
                        <i class="bi bi-diagram-3"></i> Tipo de Ayuda
                    </label>
                    <input asp-for="IdTipoAyuda" class="form-control" />
                    <span asp-validation-for="IdTipoAyuda" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FechaOrden" class="control-label">
                        <i class="bi bi-calendar-date"></i> Fecha de Orden
                    </label>
                    <input asp-for="FechaOrden" class="form-control" type="date" />
                    <span asp-validation-for="FechaOrden" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="control-label">
                <i class="bi bi-chat-text"></i> Descripción
            </label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describa la ayuda diagnóstica requerida..."></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="Urgente" />
                    <label class="form-check-label" asp-for="Urgente">
                        <i class="bi bi-exclamation-triangle"></i> Urgente
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Estado" class="control-label">
                        <i class="bi bi-check-circle"></i> Estado
                    </label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Registrar Orden" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
