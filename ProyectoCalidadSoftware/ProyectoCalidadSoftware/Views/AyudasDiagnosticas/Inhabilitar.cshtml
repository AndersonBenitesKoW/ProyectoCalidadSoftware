@model CapaEntidad.entAyudaDiagnosticaOrden

@{
    ViewData["Title"] = "Inhabilitar Ayuda Diagnóstica";
}

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Inhabilitación</h1>
        <h3>¿Está seguro de que desea inhabilitar esta orden de ayuda diagnóstica?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles de la Orden de Ayuda Diagnóstica</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-hash"></i> ID Ayuda
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdAyuda)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> ID Paciente
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdPaciente)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-heart-pulse"></i> ID Embarazo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdEmbarazo)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> ID Profesional
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdProfesional)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-diagram-3"></i> Tipo de Ayuda
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdTipoAyuda)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-text"></i> Descripción
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-exclamation-triangle"></i> Urgente
            </dt>
            <dd class="col-sm-9">
                @if (Model.Urgente) {
                    <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> Sí</span>
                } else {
                    <span class="badge bg-secondary"><i class="bi bi-dash-circle"></i> No</span>
                }
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-date"></i> Fecha de Orden
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaOrden)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> Estado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción inhabilitará la orden de ayuda diagnóstica. La orden quedará inactiva pero no se eliminará permanentemente.
        </div>

        <form asp-action="Inhabilitar" class="mt-4">
            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Inhabilitar Orden" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
