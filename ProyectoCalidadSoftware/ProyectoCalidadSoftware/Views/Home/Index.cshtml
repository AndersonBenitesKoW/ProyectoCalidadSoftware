@model ProyectoCalidadSoftware.Models.HomeDashboardViewModel
@{
    ViewData["Title"] = "Panel de Control";
}

<style>
    .dashboard-card {
        transition: all 0.2s ease-in-out;
        border: 1px solid #e0e0e0;
    }

        .dashboard-card:hover {
            transform: translateY(-5px); /* Efecto de "levantar" la tarjeta */
            box-shadow: 0 8px 16px rgba(0,0,0,0.15) !important;
            border-color: var(--bs-primary);
        }

        .dashboard-card .card-body a.stretched-link {
            color: var(--bs-primary);
            text-decoration: none;
            font-weight: 600;
        }

            .dashboard-card .card-body a.stretched-link:hover {
                text-decoration: underline;
            }

    .card-icon {
        font-size: 3.5rem;
        float: right;
        opacity: 0.2;
        color: var(--bs-primary);
    }

    .list-group-item a {
        text-decoration: none;
        color: var(--bs-dark);
        font-weight: 500;
    }

        .list-group-item a:hover {
            color: var(--bs-primary);
            text-decoration: underline;
        }
</style>

<div class="text-center mb-4 pt-3">
    <h1 class="display-4">Panel de Control</h1>
    <p class="lead text-muted">Gestión de Ginecología y Obstetricia</p>
</div>

<h2 class="h4 mb-3" style="font-weight: 300;">Consultas Principales</h2>
<div class="row">

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
