@model CapaEntidad.entAyudaDiagnosticaOrden

@{
    ViewData["Title"] = "Registrar Orden de Ayuda Diagnóstica";

    var pacientesModal = ViewBag.PacientesModal as IEnumerable<CapaEntidad.entPaciente>;
    var profesionalesModal = ViewBag.ProfesionalesModal as IEnumerable<CapaEntidad.entProfesionalSalud>;
    var embarazosModal = ViewBag.EmbarazosModal as IEnumerable<CapaEntidad.entEmbarazo>;
    var tiposAyudaModal = ViewBag.TiposAyudaModal as IEnumerable<CapaEntidad.entTipoAyudaDiagnostica>;
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-file-earmark-medical me-2"></i> @ViewData["Title"]
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Insertar" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- PACIENTE -->
                    <div class="mb-3">
                        <label class="form-label">Paciente</label>
                        <div class="input-group">
                            <input class="form-control"
                                   id="txtPaciente"
                                   readonly
                                   placeholder="-- Seleccione Paciente --" />
                            <input asp-for="IdPaciente" type="hidden" id="hdnIdPaciente" />
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalPaciente">
                                Buscar
                            </button>
                        </div>
                        <span asp-validation-for="IdPaciente" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <!-- EMBARAZO (Opcional) -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Embarazo Relacionado</label>
                            <div class="input-group">
                                <input class="form-control"
                                       id="txtEmbarazo"
                                       readonly
                                       placeholder="-- Embarazo (Opcional) --" />
                                <input asp-for="IdEmbarazo" type="hidden" id="hdnIdEmbarazo" />
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalEmbarazo">
                                    Buscar
                                </button>
                            </div>
                        </div>

                        <!-- PROFESIONAL QUE ORDENA -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Profesional que ordena</label>
                            <div class="input-group">
                                <input class="form-control"
                                       id="txtProfesional"
                                       readonly
                                       placeholder="-- Seleccione Profesional que ordena --" />
                                <input asp-for="IdProfesional" type="hidden" id="hdnIdProfesional" />
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalProfesional">
                                    Buscar
                                </button>
                            </div>
                            <span asp-validation-for="IdProfesional" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- TIPO DE AYUDA -->
                    <div class="mb-3">
                        <label class="form-label">Tipo de Ayuda Estándar</label>
                        <div class="input-group">
                            <input class="form-control"
                                   id="txtTipoAyuda"
                                   readonly
                                   placeholder="-- Seleccione Tipo (o escriba abajo) --" />
                            <input asp-for="IdTipoAyuda" type="hidden" id="hdnIdTipoAyuda" />
                            <button type="button"
                                    class="btn btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalTipoAyuda">
                                Buscar
                            </button>
                        </div>
                        <span asp-validation-for="IdTipoAyuda" class="text-danger small"></span>
                    </div>

                    <!-- DESCRIPCIÓN ESPECÍFICA -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Descripcion" class="form-control" style="height: 100px"></textarea>
                        <label asp-for="Descripcion">Descripción Específica (si no está en la lista)</label>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3 d-flex align-items-center">
                            <div class="form-check form-switch">
                                <input asp-for="Urgente" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="Urgente" class="form-check-label">Marcar como Urgente</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="FechaOrden" class="form-control" type="datetime-local" />
                                <label asp-for="FechaOrden"></label>
                                <span asp-validation-for="FechaOrden" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Registrar Orden
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ========= MODAL PACIENTE ========= -->
<div class="modal fade" id="modalPaciente" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarPaciente"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarPaciente"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Paciente</th>
                            <th>DNI</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pacientesModal != null)
                        {
                            foreach (var p in pacientesModal)
                            {
                                <tr>
                                    <td>@p.IdPaciente</td>
                                    <td>@(p.Nombres + " " + p.Apellidos)</td>
                                    <td>@p.DNI</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarPaciente"
                                                data-id="@p.IdPaciente"
                                                data-nombre="@(p.Nombres + " " + p.Apellidos)">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ========= MODAL EMBARAZO ========= -->
<div class="modal fade" id="modalEmbarazo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Embarazo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarEmbarazo"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarEmbarazo"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Paciente</th>
                            <th>FUR</th>
                            <th>FPP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (embarazosModal != null)
                        {
                            foreach (var e in embarazosModal)
                            {
                                <tr>
                                    <td>@e.IdEmbarazo</td>
                                    <td>@e.NombrePaciente</td>
                                    <td>@e.FUR?.ToString("dd/MM/yyyy")</td>
                                    <td>@e.FPP?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarEmbarazo"
                                                data-id="@e.IdEmbarazo"
                                                data-nombre="@e.NombrePaciente">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ========= MODAL PROFESIONAL ========= -->
