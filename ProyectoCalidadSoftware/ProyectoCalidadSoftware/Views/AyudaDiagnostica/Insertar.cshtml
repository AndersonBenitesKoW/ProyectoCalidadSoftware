<!-- ========= MODAL TIPO DE AYUDA ========= -->
<div class="modal fade" id="modalTipoAyuda" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Tipo de Ayuda</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarTipoAyuda"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarTipoAyuda"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (tiposAyudaModal != null)
                        {
                            foreach (var t in tiposAyudaModal)
                            {
                                <tr>
                                    <td>@t.IdTipoAyuda</td>
                                    <td>@t.Nombre</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarTipoAyuda"
                                                data-id="@t.IdTipoAyuda"
                                                data-nombre="@t.Nombre">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Selección desde los modals
            document.addEventListener('click', function (e) {

                // Paciente
                if (e.target.classList.contains('btnSeleccionarPaciente')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdPaciente').value = id;
                    document.getElementById('txtPaciente').value   = nombre;

                    const modalEl = document.getElementById('modalPaciente');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Profesional
                if (e.target.classList.contains('btnSeleccionarProfesional')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdProfesional').value = id;
                    document.getElementById('txtProfesional').value   = nombre;

                    const modalEl = document.getElementById('modalProfesional');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Embarazo
                if (e.target.classList.contains('btnSeleccionarEmbarazo')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdEmbarazo').value = id;
                    document.getElementById('txtEmbarazo').value   = nombre;

                    const modalEl = document.getElementById('modalEmbarazo');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Tipo de ayuda
                if (e.target.classList.contains('btnSeleccionarTipoAyuda')) {
                    const id     = e.target.getAttribute('data-id');
                    const nombre = e.target.getAttribute('data-nombre');

                    document.getElementById('hdnIdTipoAyuda').value = id;
                    document.getElementById('txtTipoAyuda').value   = nombre;

                    const modalEl = document.getElementById('modalTipoAyuda');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            });

            // Buscar Paciente por ID
            const btnPac = document.getElementById("btnBuscarPaciente");
            const txtPac = document.getElementById("buscarPaciente");
            if (btnPac && txtPac) {
                btnPac.addEventListener("click", function () {
                    const filtro = txtPac.value.trim();
                    const filas = document.querySelectorAll("#modalPaciente tbody tr");
                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Profesional por ID
            const btnProf = document.getElementById("btnBuscarProfesional");
            const txtProf = document.getElementById("buscarProfesional");
            if (btnProf && txtProf) {
                btnProf.addEventListener("click", function () {
                    const filtro = txtProf.value.trim();
                    const filas = document.querySelectorAll("#modalProfesional tbody tr");
                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Embarazo por ID
            const btnEmb = document.getElementById("btnBuscarEmbarazo");
            const txtEmb = document.getElementById("buscarEmbarazo");
            if (btnEmb && txtEmb) {
                btnEmb.addEventListener("click", function () {
                    const filtro = txtEmb.value.trim();
                    const filas = document.querySelectorAll("#modalEmbarazo tbody tr");
                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Tipo de ayuda por ID
            const btnTipo = document.getElementById("btnBuscarTipoAyuda");
            const txtTipo = document.getElementById("buscarTipoAyuda");
            if (btnTipo && txtTipo) {
                btnTipo.addEventListener("click", function () {
                    const filtro = txtTipo.value.trim();
                    const filas = document.querySelectorAll("#modalTipoAyuda tbody tr");
                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }
        });
    </script>
}
