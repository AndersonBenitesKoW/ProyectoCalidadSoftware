@model CapaEntidad.entAyudaDiagnosticaOrden
@{
    ViewData["Title"] = "Detalles de la Orden";

    string clase = Model.Estado == "Anulada" ? "text-danger" :
                   Model.Estado == "Realizada" ? "text-success" : "text-primary";
}

<style>
    .details-list dt {
        font-weight: 600;
    }

    .details-list dd {
        color: #333;
    }
</style>

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

        <h1 class="display-6"><i class="bi bi-file-earmark-medical text-primary"></i> @ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Orden #@Model.IdAyuda</h5>
                <span class="badge bg-@clase fs-6">@Model.Estado</span>
            </div>
            <div class="card-body">
                <dl class="row details-list">
                    <dt class="col-sm-4"><i class="bi bi-person"></i> Paciente</dt>
                    <dd class="col-sm-8">@Model.NombrePaciente</dd>

                    <dt class="col-sm-4"><i class="bi bi-calendar-event"></i> Fecha de Orden</dt>
                    <dd class="col-sm-8">@Model.FechaOrden.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4"><i class="bi bi-person-lines-fill"></i> Profesional que Ordena</dt>
                    <dd class="col-sm-8">@Model.NombreProfesional</dd>

                    <dt class="col-sm-4"><i class="bi bi-heart-pulse"></i> Embarazo Relacionado</dt>
                    <dd class="col-sm-8">@(Model.IdEmbarazo.HasValue ? $"ID Embarazo: {Model.IdEmbarazo}" : "N/A")</dd>

                    <hr class="my-2" />

                    <dt class="col-sm-4"><i class="bi bi-clipboard-pulse"></i> Tipo de Ayuda</dt>
                    <dd class="col-sm-8">@Model.NombreTipoAyuda</dd>

                    <dt class="col-sm-4"><i class="bi bi-chat-text"></i> Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4"><i class="bi bi-exclamation-diamond-fill"></i> Urgente</dt>
                    <dd class="col-sm-8">@(Model.Urgente ? "Sí" : "No")</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>