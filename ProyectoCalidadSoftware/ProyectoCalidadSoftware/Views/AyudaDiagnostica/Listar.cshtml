@model IEnumerable<CapaEntidad.entAyudaDiagnosticaOrden>
@{
    ViewData["Title"] = "Órdenes de Ayuda Diagnóstica";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0"><i class="bi bi-file-earmark-medical"></i> @ViewData["Title"]</h1>
        <p class="text-muted mb-0">Gestión de órdenes de laboratorio, ecografías y otros.</p>
    </div>
    <a asp-action="Insertar" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nueva Orden
    </a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert"><i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5"><h4 class="text-muted">No hay órdenes registradas</h4></div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha Orden</th>
                            <th>Paciente</th>
                            <th>Tipo de Ayuda</th>
                            <th>Descripción</th>
                            <th>Profesional</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FechaOrden.ToString("dd/MM/yyyy")</td>
                                <td>@item.NombrePaciente</td>
                                <td>@item.NombreTipoAyuda</td>
                                <td>@item.Descripcion</td>
                                <td>@item.NombreProfesional</td>
                                <td class="text-center">
                                    @{
                                        string clase = item.Estado == "Anulada" ? "bg-danger" :
                                        item.Estado == "Realizada" ? "bg-success" : "bg-primary";
                                    }
                                    <span class="badge @clase">@item.Estado</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">

                                        <a asp-action="Detalles" asp-route-id="@item.IdAyuda" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                            <i class="bi bi-search"></i>
                                        </a>

                                        @if (item.Estado == "Solicitada")
                                        {
                                            <a asp-action="Anular" asp-route-id="@item.IdAyuda" class="btn btn-sm btn-outline-danger" title="Anular Orden">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>