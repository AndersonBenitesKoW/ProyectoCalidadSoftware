@model CapaEntidad.entPaciente

@{
    ViewData["Title"] = "Inhabilitar Paciente";
}

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Inhabilitación</h1>
        <h3>¿Está seguro de que desea inhabilitar este paciente?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles del Paciente</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-hash"></i> ID Paciente
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdPaciente)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> ID Usuario
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdUsuario)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> Nombres
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombres)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-fill"></i> Apellidos
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Apellidos)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-card-text"></i> DNI
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DNI)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-event"></i> Fecha de Nacimiento
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> Estado
            </dt>
            <dd class="col-sm-9">
                @if (Model.Estado) {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                } else {
                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                }
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción inhabilitará al paciente. El paciente quedará inactivo pero no se eliminará permanentemente.
        </div>

        <form asp-action="Inhabilitar" class="mt-4">
            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Inhabilitar Paciente" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>