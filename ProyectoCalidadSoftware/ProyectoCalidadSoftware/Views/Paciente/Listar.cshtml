@model IEnumerable<CapaEntidad.entPaciente>

@{
    ViewData["Title"] = "Listar Pacientes";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"></script>

<div class="table-container">
    <div class="floating-elements">
        <div class="floating-circle circle-1"></div>
        <div class="floating-circle circle-2"></div>
        <div class="floating-circle circle-3"></div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0 animate__animated"><i class="bi bi-people"></i> Pacientes</h1>
            <p class="text-muted mb-0 animate__animated">Gestión de pacientes registrados en el sistema</p>
        </div>
        <a asp-action="Insertar" class="btn btn-primary animate__animated">
            <i class="bi bi-plus-circle"></i> Nuevo Paciente
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-hash"></i> ID Paciente</th>
                    <th><i class="bi bi-person"></i> Nombres</th>
                    <th><i class="bi bi-person-fill"></i> Apellidos</th>
                    <th><i class="bi bi-card-text"></i> DNI</th>
                    <th><i class="bi bi-calendar-event"></i> Fecha Nacimiento</th>
                    <th><i class="bi bi-check-circle"></i> Estado</th>
                    <th><i class="bi bi-gear"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdPaciente)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>
                            @if (item.Estado) {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                            } else {
                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Modificar" asp-route-id="@item.IdPaciente" class="btn btn-sm btn-outline-primary" title="Modificar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Inhabilitar" asp-route-id="@item.IdPaciente" class="btn btn-sm btn-outline-danger" title="Inhabilitar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any()) {
        <div class="text-center py-5">
            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay pacientes registrados</h4>
            <p class="text-muted">Comience registrando un nuevo paciente.</p>
            <a asp-action="Insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Insertar Primer Paciente
            </a>
        </div>
    } else {
        <div class="mt-3">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Total de Pacientes:</strong> @Model.Count() pacientes registrados.
            </div>
        </div>
        
        @section Scripts {
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Animar header
                    const h1 = document.querySelector('h1');
                    setTimeout(() => {
                        h1.classList.add('animate__fadeInDown');
                    }, 100);
        
                    const p = document.querySelector('.text-muted');
                    setTimeout(() => {
                        p.classList.add('animate__fadeIn');
                    }, 300);
        
                    const btn = document.querySelector('.btn-primary');
                    setTimeout(() => {
                        btn.classList.add('animate__bounceIn');
                    }, 500);
        
                    // Animar filas de tabla
                    const rows = document.querySelectorAll('tbody tr');
                    rows.forEach((row, index) => {
                        setTimeout(() => {
                            row.classList.add('animate__animated', 'animate__fadeInUp');
                        }, 700 + (index * 100));
                    });
        
                    // Efectos hover dinámicos
                    rows.forEach(row => {
                        row.addEventListener('mouseenter', function() {
                            this.style.transform = 'scale(1.02)';
                            this.style.boxShadow = '0 10px 20px rgba(0,0,0,0.1)';
                            this.style.transition = 'all 0.3s ease';
                        });
                        row.addEventListener('mouseleave', function() {
                            this.style.transform = 'scale(1)';
                            this.style.boxShadow = 'none';
                        });
                    });
        
                    // Animar badges
                    const badges = document.querySelectorAll('.badge');
                    badges.forEach(badge => {
                        badge.addEventListener('mouseenter', function() {
                            this.classList.add('animate__animated', 'animate__pulse');
                        });
                        badge.addEventListener('mouseleave', function() {
                            this.classList.remove('animate__pulse');
                        });
                    });
                });
            </script>
        }
    }
</div>