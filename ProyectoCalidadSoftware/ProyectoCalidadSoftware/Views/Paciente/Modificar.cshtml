@model CapaEntidad.entPaciente

@{
    ViewData["Title"] = "Modificar Paciente";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-pencil-square"></i> Modificar Paciente</h1>
        <h4>Editar Información del Paciente</h4>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>¡Error al actualizar!</strong> @ViewBag.Error
        </div>
    }
    <form asp-action="Modificar">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="IdPaciente" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdPaciente" class="control-label">
                        <i class="bi bi-hash"></i> ID Paciente
                    </label>
                    <input asp-for="IdPaciente" class="form-control" readonly />
                    <span asp-validation-for="IdPaciente" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdUsuario" class="control-label">
                        <i class="bi bi-person-badge"></i> ID Usuario (Asignado)
                    </label>
                    <input asp-for="IdUsuario" class="form-control" readonly />
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Nombres" class="control-label">
                        <i class="bi bi-person"></i> Nombres
                    </label>
                    <input asp-for="Nombres" class="form-control" placeholder="Ingrese los nombres del paciente" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                    <small class="form-text text-muted">Nombres completos del paciente</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Apellidos" class="control-label">
                        <i class="bi bi-person-fill"></i> Apellidos
                    </label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ingrese los apellidos del paciente" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                    <small class="form-text text-muted">Apellidos completos del paciente</small>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="DNI" class="control-label">
                        <i class="bi bi-card-text"></i> DNI
                    </label>
                    <input asp-for="DNI" class="form-control" placeholder="Ingrese el DNI del paciente" />
                    <span asp-validation-for="DNI" class="text-danger"></span>
                    <small class="form-text text-muted">Documento Nacional de Identidad</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FechaNacimiento" class="control-label">
                        <i class="bi bi-calendar-event"></i> Fecha de Nacimiento
                    </label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    <small class="form-text text-muted">Seleccione la fecha de nacimiento</small>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="EmailPrincipal" class="control-label">
                        <i class="bi bi-envelope-at"></i> Email Principal
                    </label>
                    <input asp-for="EmailPrincipal" class="form-control" placeholder="ejemplo@correo.com" type="email" />
                    <span asp-validation-for="EmailPrincipal" class="text-danger"></span>
                    <small class="form-text text-muted">Email de contacto principal</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TelefonoPrincipal" class="control-label">
                        <i class="bi bi-phone"></i> Teléfono Principal
                    </label>
                    <input asp-for="TelefonoPrincipal" class="form-control" placeholder="987654321" />
                    <span asp-validation-for="TelefonoPrincipal" class="text-danger"></span>
                    <small class="form-text text-muted">Teléfono o celular de contacto</small>
                </div>
            </div>
        </div>
        <div class="form-group form-check mb-4">
            <input class="form-check-input" asp-for="Estado" />
            <label class="form-check-label" asp-for="Estado">
                <i class="bi bi-check-circle"></i> Activo
            </label>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}