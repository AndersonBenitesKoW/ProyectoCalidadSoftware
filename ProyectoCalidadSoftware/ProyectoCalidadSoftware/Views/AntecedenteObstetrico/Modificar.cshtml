@model CapaEntidad.entAntecedenteObstetrico

@{
    ViewData["Title"] = "Modificar Antecedente Obstétrico";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-pencil-square"></i> Modificar Antecedente Obstétrico</h1>
        <h4>Editar Información del Antecedente</h4>
    </div>

    <form asp-action="Modificar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdAntecedente" class="control-label">
                        <i class="bi bi-hash"></i> ID Antecedente
                    </label>
                    <input asp-for="IdAntecedente" class="form-control" readonly />
                    <span asp-validation-for="IdAntecedente" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdPaciente" class="control-label">
                        <i class="bi bi-person"></i> ID Paciente
                    </label>
                    <input asp-for="IdPaciente" class="form-control" />
                    <span asp-validation-for="IdPaciente" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Menarquia" class="control-label">
                        <i class="bi bi-calendar-event"></i> Menarquía
                    </label>
                    <input asp-for="Menarquia" class="form-control" type="number" />
                    <span asp-validation-for="Menarquia" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="CicloDias" class="control-label">
                        <i class="bi bi-clock"></i> Ciclo (Días)
                    </label>
                    <input asp-for="CicloDias" class="form-control" type="number" />
                    <span asp-validation-for="CicloDias" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="Gestas" class="control-label">
                        <i class="bi bi-plus-square"></i> Gestas
                    </label>
                    <input asp-for="Gestas" class="form-control" type="number" />
                    <span asp-validation-for="Gestas" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="Partos" class="control-label">
                        <i class="bi bi-heart"></i> Partos
                    </label>
                    <input asp-for="Partos" class="form-control" type="number" />
                    <span asp-validation-for="Partos" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="Abortos" class="control-label">
                        <i class="bi bi-x-circle"></i> Abortos
                    </label>
                    <input asp-for="Abortos" class="form-control" type="number" />
                    <span asp-validation-for="Abortos" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Observacion" class="control-label">
                <i class="bi bi-chat-text"></i> Observación
            </label>
            <textarea asp-for="Observacion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Observacion" class="text-danger"></span>
        </div>

        <div class="form-group form-check mb-4">
            <input class="form-check-input" asp-for="Estado" />
            <label class="form-check-label" asp-for="Estado">
                <i class="bi bi-check-circle"></i> Activo
            </label>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
