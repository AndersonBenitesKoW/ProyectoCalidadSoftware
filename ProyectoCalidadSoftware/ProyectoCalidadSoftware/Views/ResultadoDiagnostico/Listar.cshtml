@model IEnumerable<CapaEntidad.entResultadoDiagnostico>

@{
    ViewData["Title"] = "Listar Resultados Diagnósticos";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-file-earmark-medical-fill"></i> Resultados Diagnósticos</h1>
            <p class="text-muted mb-0">Gestión de resultados de exámenes diagnósticos relacionados con controles prenatales</p>
        </div>
        <div>
            <button type="button" class="btn btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#modalBuscar">
                <i class="bi bi-search"></i> Buscar
            </button>
            <a asp-action="Registrar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Resultado
            </a>
        </div>
    </div>

    @* Mensajes de acción *@
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="bi bi-check2-circle"></i> @TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="bi bi-x-circle"></i> @TempData["Error"]</div>
    }

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-hash"></i> ID Resultado</th>
                    <th><i class="bi bi-person"></i> Paciente</th>
                    <th><i class="bi bi-stethoscope"></i> Profesional</th>
                    <th><i class="bi bi-calendar-date"></i> Control Prenatal</th>
                    <th><i class="bi bi-clipboard-data"></i> Ayuda Diagnóstica</th>
                    <th><i class="bi bi-calendar-check"></i> Fecha Resultado</th>
                    <th><i class="bi bi-chat-text"></i> Resumen</th>
                    <th><i class="bi bi-exclamation-triangle"></i> Crítico</th>
                    <th><i class="bi bi-check-circle"></i> Estado</th>
                    <th><i class="bi bi-gear"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var activo = string.Equals(item.Estado, "Activo", StringComparison.OrdinalIgnoreCase)
                    || string.Equals(item.Estado, "1", StringComparison.OrdinalIgnoreCase)
                    || string.Equals(item.Estado, "ACTIVO", StringComparison.OrdinalIgnoreCase);

                    <tr class="@(item.Critico ? "table-danger" : "")">
                        <td>@item.IdResultado</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.NombrePaciente))
                            {
                                <span title="@item.NombrePaciente">
                                    @(item.NombrePaciente.Length > 25 ? item.NombrePaciente.Substring(0, 25) + "..." : item.NombrePaciente)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.NombreProfesional))
                            {
                                <span title="@item.NombreProfesional">
                                    @(item.NombreProfesional.Length > 25 ? item.NombreProfesional.Substring(0, 25) + "..." : item.NombreProfesional)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </td>
                        <td>
                            @if (item.IdControlPrenatal.HasValue && item.FechaControlPrenatal.HasValue)
                            {
                                <div>
                                    <strong>ID: @item.IdControlPrenatal</strong><br />
                                    <small class="text-muted">@item.FechaControlPrenatal.Value.ToString("dd/MM/yyyy")</small>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No asociado</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.TipoAyuda))
                            {
                                <div>
                                    <strong>@item.TipoAyuda</strong>
                                    @if (item.Urgente.HasValue && item.Urgente.Value)
                                    {
                                        <br /><span class="badge bg-danger">Urgente</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.DescripcionAyuda))
                                    {
                                        <br /><small class="text-muted">@(item.DescripcionAyuda.Length > 30 ? item.DescripcionAyuda.Substring(0, 30) + "..." : item.DescripcionAyuda)</small>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">ID: @item.IdAyuda</span>
                            }
                        </td>
                        <td>@item.FechaResultado.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Resumen))
                            {
                                <span title="@item.Resumen">
                                    @(item.Resumen.Length > 40 ? item.Resumen.Substring(0, 40) + "..." : item.Resumen)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Sin resumen</span>
                            }
                        </td>
                        <td>
                            @if (item.Critico)
                            {
                                <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> CRÍTICO</span>
                            }
                            else
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Normal</span>
                            }
                        </td>
                        <td>
                            @if (activo)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Modificar" asp-route-id="@item.IdResultado"
                                   class="btn btn-sm btn-outline-primary" title="Modificar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Anular" asp-route-id="@item.IdResultado"
                                   class="btn btn-sm btn-outline-danger" title="Anular">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-file-earmark-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay resultados diagnósticos registrados</h4>
            <p class="text-muted">Comience registrando resultados de exámenes diagnósticos.</p>
            <a asp-action="Registrar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Registrar Primer Resultado
            </a>
        </div>
    }
    else
    {
        <div class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Resultados Críticos:</strong> @Model.Count(r => r.Critico) registros marcados como críticos
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i>
                        <strong>Total de Resultados:</strong> @Model.Count() registros
                    </div>
                </div>
            </div>
            
            <!-- ============ MODAL BUSCAR ============ -->
            <div class="modal fade" id="modalBuscar" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Buscar Resultados por Paciente</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="formBuscar" method="get" asp-action="Listar">
                                <div class="mb-3">
                                    <label for="dni" class="form-label">DNI del Paciente</label>
                                    <input type="text" class="form-control" id="dni" name="dni" placeholder="Ingrese DNI" maxlength="8" />
                                    <div id="dni-feedback" class="invalid-feedback"></div>
                                </div>
                                <div class="mb-3">
                                    <label for="nombrePaciente" class="form-label">Nombre del Paciente</label>
                                    <input type="text" class="form-control" id="nombrePaciente" readonly placeholder="Se cargará automáticamente al ingresar DNI" />
                                </div>
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary" id="btnBuscar" disabled>Buscar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var dniTimeout;

            $('#dni').on('input', function () {
                var dni = $(this).val().trim();
                var $nombrePaciente = $('#nombrePaciente');
                var $dniFeedback = $('#dni-feedback');
                var $btnBuscar = $('#btnBuscar');

                // Clear previous timeout
                clearTimeout(dniTimeout);

                // Reset fields
                $nombrePaciente.val('');
                $dniFeedback.text('');
                $(this).removeClass('is-invalid is-valid');
                $btnBuscar.prop('disabled', true);

                if (dni.length === 8 && /^\d+$/.test(dni)) {
                    // Valid DNI format, search after a delay
                    dniTimeout = setTimeout(function () {
                        $.ajax({
                            url: '@Url.Action("BuscarPacientePorDNI", "ResultadoDiagnostico")',
                            type: 'GET',
                            data: { dni: dni },
                            success: function (response) {
                                if (response.success) {
                                    $nombrePaciente.val(response.paciente.nombre);
                                    $('#dni').addClass('is-valid');
                                    $btnBuscar.prop('disabled', false);
                                } else {
                                    $dniFeedback.text(response.message);
                                    $('#dni').addClass('is-invalid');
                                }
                            },
                            error: function () {
                                $dniFeedback.text('Error al buscar paciente.');
                                $('#dni').addClass('is-invalid');
                            }
                        });
                    }, 500); // Delay to avoid too many requests
                } else if (dni.length > 0) {
                    // Invalid format
                    $dniFeedback.text('El DNI debe tener 8 dígitos.');
                    $(this).addClass('is-invalid');
                }
            });

            // Reset modal when closed
            $('#modalBuscar').on('hidden.bs.modal', function () {
                $('#dni').val('').removeClass('is-invalid is-valid');
                $('#nombrePaciente').val('');
                $('#dni-feedback').text('');
                $('#btnBuscar').prop('disabled', true);
            });
        });
    </script>
}
