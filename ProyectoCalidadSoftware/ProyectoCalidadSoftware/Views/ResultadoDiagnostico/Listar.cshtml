@model IEnumerable<CapaEntidad.entResultadoDiagnostico>

@{
    ViewData["Title"] = "Listar Resultados Diagnósticos";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-file-earmark-medical-fill"></i> Resultados Diagnósticos</h1>
            <p class="text-muted mb-0">Gestión de resultados de exámenes diagnósticos</p>
        </div>
        <div>
            <button type="button" class="btn btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#modalBuscar">
                <i class="bi bi-search"></i> Buscar
            </button>
            <a asp-action="Registrar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Resultado
            </a>
        </div>
    </div>

    @* Mensajes de acción *@
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="bi bi-check2-circle"></i> @TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="bi bi-x-circle"></i> @TempData["Error"]</div>
    }

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-hash"></i> ID Resultado</th>
                    <th><i class="bi bi-clipboard-data"></i> ID Ayuda</th>
                    <th><i class="bi bi-calendar-date"></i> Fecha Resultado</th>
                    <th><i class="bi bi-chat-text"></i> Resumen</th>
                    <th><i class="bi bi-exclamation-triangle"></i> Crítico</th>
                    <th><i class="bi bi-check-circle"></i> Estado</th>
                    <th><i class="bi bi-gear"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var activo = string.Equals(item.Estado, "Activo", StringComparison.OrdinalIgnoreCase)
                    || string.Equals(item.Estado, "1", StringComparison.OrdinalIgnoreCase)
                    || string.Equals(item.Estado, "ACTIVO", StringComparison.OrdinalIgnoreCase);

                    <tr class="@(item.Critico ? "table-danger" : "")">
                        <td>@item.IdResultado</td>
                        <td>@item.IdAyuda</td>
                        <td>@item.FechaResultado.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Resumen))
                            {
                                <span title="@item.Resumen">
                                    @(item.Resumen.Length > 40 ? item.Resumen.Substring(0, 40) + "..." : item.Resumen)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Sin resumen</span>
                            }
                        </td>
                        <td>
                            @if (item.Critico)
                            {
                                <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> CRÍTICO</span>
                            }
                            else
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Normal</span>
                            }
                        </td>
                        <td>
                            @if (activo)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Modificar" asp-route-id="@item.IdResultado"
                                   class="btn btn-sm btn-outline-primary" title="Modificar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Anular" asp-route-id="@item.IdResultado"
                                   class="btn btn-sm btn-outline-danger" title="Anular">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-file-earmark-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay resultados diagnósticos registrados</h4>
            <p class="text-muted">Comience registrando resultados de exámenes diagnósticos.</p>
            <a asp-action="Registrar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Registrar Primer Resultado
            </a>
        </div>
    }
    else
    {
        <div class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Resultados Críticos:</strong> @Model.Count(r => r.Critico) registros marcados como críticos
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i>
                        <strong>Total de Resultados:</strong> @Model.Count() registros
                    </div>
                </div>
            </div>
            
            <!-- ============ MODAL BUSCAR ============ -->
            <div class="modal fade" id="modalBuscar" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Buscar Resultados por Paciente</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="formBuscar" method="get" asp-action="Listar">
                                <div class="mb-3">
                                    <label for="dni" class="form-label">DNI del Paciente</label>
                                    <input type="text" class="form-control" id="dni" name="dni" placeholder="Ingrese DNI" />
                                </div>
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Buscar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
