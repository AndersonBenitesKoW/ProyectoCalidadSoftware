@model CapaEntidad.entResultadoDiagnostico

@{
    ViewData["Title"] = "Anular Resultado Diagnóstico";
}

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Anulación</h1>
        <h3>¿Está seguro de que desea anular este resultado diagnóstico?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles del Resultado Diagnóstico</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-hash"></i> ID Resultado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdResultado)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-clipboard-data"></i> ID Ayuda Diagnóstica
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdAyuda)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-date"></i> Fecha del Resultado
            </dt>
            <dd class="col-sm-9">
                @Model.FechaResultado.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-text"></i> Resumen
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Resumen)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-exclamation-triangle"></i> Crítico
            </dt>
            <dd class="col-sm-9">
                @if (Model.Critico) {
                    <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> Sí - Requiere atención inmediata</span>
                } else {
                    <span class="badge bg-secondary"><i class="bi bi-dash-circle"></i> No</span>
                }
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> Estado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción anulará el resultado diagnóstico. El registro quedará inactivo pero no se eliminará permanentemente.
        </div>

        @if (Model.Critico) {
            <div class="alert alert-danger mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Resultado Crítico:</strong> Este resultado fue marcado como crítico. Considere las implicaciones médicas antes de proceder con la anulación.
            </div>
        }

        <form asp-action="Anular" asp-route-id="@Model.IdResultado" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Anular Resultado" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
