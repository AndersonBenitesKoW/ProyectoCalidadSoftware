@model CapaEntidad.entResultadoDiagnostico

@{
    ViewData["Title"] = "Registrar Resultado Diagnóstico";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-file-earmark-medical"></i> Registrar Resultado Diagnóstico</h1>
        <h4>Ingreso de resultados de exámenes diagnósticos</h4>
    </div>

    <form asp-action="Registrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdResultado" class="control-label">
                        <i class="bi bi-hash"></i> ID Resultado
                    </label>
                    <input asp-for="IdResultado" class="form-control" />
                    <span asp-validation-for="IdResultado" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdAyuda" class="control-label">
                        <i class="bi bi-clipboard-data"></i> Ayuda Diagnóstica
                    </label>
                    <div class="input-group">
                        <input type="text" id="ayudaSeleccionada" class="form-control" readonly placeholder="Seleccione una ayuda diagnóstica" />
                        <button type="button"
                                class="btn btn-outline-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#modalAyuda">
                            Buscar
                        </button>
                    </div>
                    <input asp-for="IdAyuda" type="hidden" />
                    <span asp-validation-for="IdAyuda" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FechaResultado" class="control-label">
                        <i class="bi bi-calendar-date"></i> Fecha del Resultado
                    </label>
                    <input asp-for="FechaResultado" class="form-control" type="date" />
                    <span asp-validation-for="FechaResultado" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Estado" class="control-label">
                        <i class="bi bi-check-circle"></i> Estado
                    </label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Resumen" class="control-label">
                <i class="bi bi-chat-text"></i> Resumen del Resultado
            </label>
            <textarea asp-for="Resumen" class="form-control" rows="4" placeholder="Describa los resultados del examen diagnóstico..."></textarea>
            <span asp-validation-for="Resumen" class="text-danger"></span>
        </div>

        <div class="form-group form-check mb-4">
            <input class="form-check-input" asp-for="Critico" />
            <label class="form-check-label" asp-for="Critico">
                <i class="bi bi-exclamation-triangle"></i> Resultado Crítico
            </label>
            <small class="form-text text-muted">Marque si el resultado requiere atención médica inmediata</small>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Registrar Resultado" class="btn btn-primary" />
        </div>
    </form>
</div>

<!-- ============ MODAL AYUDA DIAGNÓSTICA ============ -->
<div class="modal fade" id="modalAyuda" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Ayuda Diagnóstica</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarAyuda"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="text"
                               id="buscarAyudaDNI"
                               class="form-control form-control-sm text-end"
                               placeholder="DNI Paciente" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descripción</th>
                            <th>Tipo</th>
                            <th>Fecha Orden</th>
                            <th>Urgente</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbodyAyudas">
                        <!-- Las ayudas se cargarán dinámicamente con AJAX -->
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Buscar Ayuda por DNI del Paciente
            const btnAyuda = document.getElementById("btnBuscarAyuda");
            const txtDNI = document.getElementById("buscarAyudaDNI");
            if (btnAyuda && txtDNI) {
                btnAyuda.addEventListener("click", function () {
                    const dni = txtDNI.value.trim();
                    if (!dni) {
                        alert("Ingrese un DNI para buscar.");
                        return;
                    }

                    fetch(`/ResultadoDiagnostico/BuscarAyudaPorPacienteDNI?dni=${encodeURIComponent(dni)}`)
                        .then(response => response.json())
                        .then(data => {
                            const tbody = document.getElementById("tbodyAyudas");
                            tbody.innerHTML = ""; // Limpiar tabla

                            if (data.success) {
                                data.ayudas.forEach(ayuda => {
                                    const tr = document.createElement("tr");
                                    tr.innerHTML = `
                                        <td>${ayuda.id}</td>
                                        <td>${ayuda.descripcion}</td>
                                        <td>${ayuda.tipoAyuda}</td>
                                        <td>${ayuda.fechaOrden}</td>
                                        <td>${ayuda.urgente ? '<span class="badge bg-danger">Urgente</span>' : '<span class="badge bg-success">Normal</span>'}</td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-sm btn-primary btnSeleccionarAyuda"
                                                    data-id="${ayuda.id}"
                                                    data-descripcion="${ayuda.descripcion} (${ayuda.tipoAyuda})">
                                                Seleccionar
                                            </button>
                                        </td>
                                    `;
                                    tbody.appendChild(tr);
                                });
                            } else {
                                const tr = document.createElement("tr");
                                tr.innerHTML = `<td colspan="6" class="text-danger text-center">${data.message}</td>`;
                                tbody.appendChild(tr);
                            }
                        })
                        .catch(error => {
                            console.error("Error:", error);
                            const tbody = document.getElementById("tbodyAyudas");
                            tbody.innerHTML = '<tr><td colspan="6" class="text-danger text-center">Error al buscar ayudas.</td></tr>';
                        });
                });
            }

            // Selección desde el modal
            document.addEventListener('click', function (e) {
                if (e.target.classList.contains('btnSeleccionarAyuda')) {
                    const id = e.target.getAttribute('data-id');
                    const descripcion = e.target.getAttribute('data-descripcion');
                    document.getElementById('IdAyuda').value = id;
                    document.getElementById('ayudaSeleccionada').value = descripcion;

                    const modalEl = document.getElementById('modalAyuda');
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            });

        });
    </script>
}
