@model CapaEntidad.entControlPrenatal

@{
    ViewData["Title"] = "Detalles del Control Prenatal";
    string clase = Model.Estado ? "text-success" : "text-danger";
    string texto = Model.Estado ? "Activo" : "Inhabilitado";
}

<style>
    .details-list dt {
        font-weight: 600;
    }

    .details-list dd {
        color: #333;
    }
</style>

<div class="row">
    <div class="col-lg-10 mx-auto">
        <h1 class="display-6"><i class="bi bi-file-earmark-medical text-primary"></i> @ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Control #@Model.IdControlPrenatal</h5>
                <span class="badge bg-@clase fs-6">@texto</span>
            </div>
            <div class="card-body">

                <h5 class="mt-2"><i class="bi bi-info-circle me-2"></i>Información General</h5>
                <dl class="row details-list bg-light p-3 rounded">
                    <dt class="col-sm-3">Paciente</dt>
                    <dd class="col-sm-9">@Model.NombrePaciente</dd>

                    <dt class="col-sm-3">Profesional</dt>
                    <dd class="col-sm-9">@Model.NombreProfesional</dd>

                    <dt class="col-sm-3">Fecha del Control</dt>
                    <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
                </dl>

                <h5 class="mt-4"><i class="bi bi-heart-pulse me-2"></i>Signos Vitales y Medidas</h5>
                <dl class="row details-list bg-light p-3 rounded">
                    <dt class="col-sm-3">Peso (Kg)</dt>
                    <dd class="col-sm-3">@Model.PesoKg</dd>

                    <dt class="col-sm-3">Talla (m)</dt>
                    <dd class="col-sm-3">@Model.TallaM</dd>

                    <dt class="col-sm-3">PA Sistólica</dt>
                    <dd class="col-sm-3">@Model.PA_Sistolica mmHg</dd>

                    <dt class="col-sm-3">PA Diastólica</dt>
                    <dd class="col-sm-3">@Model.PA_Diastolica mmHg</dd>
                </dl>

                <h5 class="mt-4"><i class="bi bi-clipboard-pulse me-2"></i>Evaluación Fetal</h5>
                <dl class="row details-list bg-light p-3 rounded">
                    <dt class="col-sm-3">Altura Uterina</dt>
                    <dd class="col-sm-3">@Model.AlturaUterina_cm cm</dd>

                    <dt class="col-sm-3">FCF (lpm)</dt>
                    <dd class="col-sm-3">@Model.FCF_bpm</dd>

                    <dt class="col-sm-3">Presentación Fetal</dt>
                    <dd class="col-sm-3">@Model.Presentacion</dd>

                    <dt class="col-sm-3">Proteinuria</dt>
                    <dd class="col-sm-3">@Model.Proteinuria</dd>

                    <dt class="col-sm-3">Movimientos Fetales</dt>
                    <dd class="col-sm-9">@(Model.MovFetales == true ? "Sí" : "No")</dd>
                </dl>

                <h5 class="mt-4"><i class="bi bi-sticky me-2"></i>Notas Adicionales</h5>
                <dl class="row details-list bg-light p-3 rounded">
                    <dt class="col-sm-3">Consejerías</dt>
                    <dd class="col-sm-9">@Model.Consejerias</dd>

                    <dt class="col-sm-3">Observaciones</dt>
                    <dd class="col-sm-9">@Model.Observaciones</dd>
                </dl>

            </div>
            <div class="card-footer text-end">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la Lista
                </a>
                <a asp-action="Editar" asp-route-id="@Model.IdControlPrenatal" class="btn btn-warning">
                    <i class="bi bi-pencil-fill"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>