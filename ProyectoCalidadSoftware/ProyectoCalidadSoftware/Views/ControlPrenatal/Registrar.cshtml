@model CapaEntidad.entControlPrenatal

@{
    ViewData["Title"] = "Registrar Control Prenatal";

    var embarazosPrenatal = ViewBag.EmbarazosModalPrenatal as IEnumerable<CapaEntidad.entEmbarazo>;
    var profesionalesPrenatal = ViewBag.ProfesionalesModalPrenatal as IEnumerable<CapaEntidad.entProfesionalSalud>;
    var tiposAyuda = ViewBag.TiposAyudaDiagnostica as IEnumerable<SelectListItem>;
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-file-earmark-medical me-2"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">

                <form asp-action="Registrar" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Estado" />

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <h5><i class="bi bi-info-circle me-2"></i>Información General</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <!-- EMBARAZO (Paciente) con MODAL -->
                        <div class="col-md-4">
                            <label class="form-label">Embarazo (Paciente)</label>
                            <div class="input-group mb-3">
                                <select asp-for="IdEmbarazo" class="form-select">
                                    <option value="">-- Seleccione --</option>
                                    @if (embarazosPrenatal != null)
                                    {
                                        foreach (var e in embarazosPrenatal)
                                        {
                                            <option value="@e.IdEmbarazo">@e.NombrePaciente</option>
                                        }
                                    }
                                </select>
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalEmbarazoPrenatal">
                                    Buscar
                                </button>
                            </div>
                            <span asp-validation-for="IdEmbarazo" class="text-danger small"></span>
                        </div>

                        <!-- PROFESIONAL que atiende con MODAL -->
                        <div class="col-md-4">
                            <label class="form-label">Profesional que atiende</label>
                            <div class="input-group mb-3">
                                <select asp-for="IdProfesional" class="form-select">
                                    <option value="">-- Seleccione --</option>
                                    @if (profesionalesPrenatal != null)
                                    {
                                        foreach (var p in profesionalesPrenatal)
                                        {
                                            <option value="@p.IdProfesional">@(p.Nombres + " " + p.Apellidos)</option>
                                        }
                                    }
                                </select>
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalProfesionalPrenatal">
                                    Buscar
                                </button>
                            </div>
                            <span asp-validation-for="IdProfesional" class="text-danger small"></span>
                        </div>

                        <!-- FECHA -->
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Fecha" class="form-control" type="date" />
                                <label asp-for="Fecha">Fecha del Control</label>
                                <span asp-validation-for="Fecha" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-heart-pulse me-2"></i>Signos Vitales y Medidas</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PesoKg" class="form-control" type="number" placeholder="25-250 kg" />
                                <label asp-for="PesoKg">Peso (Kg)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PesoPreGestacionalKg" class="form-control" type="number" />
                                <label asp-for="PesoPreGestacionalKg">Peso Pre-Gestacional (Kg)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="TallaM" class="form-control" type="number" placeholder="1.20-2.20 m" />
                                <label asp-for="TallaM">Talla (m)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="IMCPreGestacional" class="form-control" type="number" />
                                <label asp-for="IMCPreGestacional">IMC Pre-Gestacional</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PA_Sistolica" class="form-control" type="number" placeholder="50-250 mmHg" />
                                <label asp-for="PA_Sistolica">PA Sistólica (mmHg)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PA_Diastolica" class="form-control" type="number" placeholder="30-180 mmHg" />
                                <label asp-for="PA_Diastolica">PA Diastólica (mmHg)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Pulso" class="form-control" type="number" />
                                <label asp-for="Pulso">Pulso (lpm)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="FrecuenciaRespiratoria" class="form-control" type="number" />
                                <label asp-for="FrecuenciaRespiratoria">Frecuencia Respiratoria</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Temperatura" class="form-control" type="number" />
                                <label asp-for="Temperatura">Temperatura (°C)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="NumeroControl" class="form-control" type="number" />
                                <label asp-for="NumeroControl">Número de Control</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="EdadGestSemanas" class="form-control" type="number" />
                                <label asp-for="EdadGestSemanas">Edad Gestacional (Semanas)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="EdadGestDias" class="form-control" type="number" />
                                <label asp-for="EdadGestDias">Edad Gestacional (Días)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="MetodoEdadGest" class="form-control" />
                                <label asp-for="MetodoEdadGest">Método Edad Gestacional</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="TipoEmbarazo" class="form-control" />
                                <label asp-for="TipoEmbarazo">Tipo de Embarazo</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-clipboard-pulse me-2"></i>Evaluación Fetal</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="AlturaUterina_cm" class="form-control" type="number" />
                                <label asp-for="AlturaUterina_cm">Altura Uterina (cm)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="FCF_bpm" class="form-control" type="number" placeholder="60-220 lpm" />
                                <label asp-for="FCF_bpm">FCF (lpm)</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Presentacion" class="form-control" />
                                <label asp-for="Presentacion">Presentación Fetal</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="DinamicaUterina" class="form-control" />
                                <label asp-for="DinamicaUterina">Dinámica Uterina</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="LiquidoAmniotico" class="form-control" />
                                <label asp-for="LiquidoAmniotico">Líquido Amniótico</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="IndiceLiquidoAmniotico" class="form-control" type="number" />
                                <label asp-for="IndiceLiquidoAmniotico">Índice Líquido Amniótico</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="PerfilBiofisico" class="form-control" />
                                <label asp-for="PerfilBiofisico">Perfil Biofísico</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Proteinuria" class="form-control" />
                                <label asp-for="Proteinuria">Proteinuria</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Edemas" class="form-control" />
                                <label asp-for="Edemas">Edemas</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="Reflejos" class="form-control" />
                                <label asp-for="Reflejos">Reflejos</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Hemoglobina" class="form-control" type="number" />
                                <label asp-for="Hemoglobina">Hemoglobina (g/dL)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="ResultadoVIH" class="form-control" />
                                <label asp-for="ResultadoVIH">Resultado VIH</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="ResultadoSifilis" class="form-control" />
                                <label asp-for="ResultadoSifilis">Resultado Sífilis</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="GrupoSanguineoRh" class="form-control" />
                                <label asp-for="GrupoSanguineoRh">Grupo Sanguíneo Rh</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="EcografiaRealizada" class="form-check-input" type="checkbox" />
                                <label asp-for="EcografiaRealizada" class="form-check-label">Ecografía Realizada</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="FechaEcografia" class="form-control" type="date" />
                                <label asp-for="FechaEcografia">Fecha Ecografía</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="LugarEcografia" class="form-control" />
                                <label asp-for="LugarEcografia">Lugar Ecografía</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="PlanPartoEntregado" class="form-check-input" type="checkbox" />
                                <label asp-for="PlanPartoEntregado" class="form-check-label">Plan Parto Entregado</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="MicronutrientesEntregados" class="form-control" />
                                <label asp-for="MicronutrientesEntregados">Micronutrientes Entregados</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="ViajoUltSemanas" class="form-check-input" type="checkbox" />
                                <label asp-for="ViajoUltSemanas" class="form-check-label">Viajó Últimas Semanas</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mb-3">
                                <input asp-for="ReferenciaObstetrica" class="form-check-input" type="checkbox" />
                                <label asp-for="ReferenciaObstetrica" class="form-check-label">Referencia Obstétrica</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mb-3">
                                <input asp-for="ProximaCitaFecha" class="form-control" type="date" />
                                <label asp-for="ProximaCitaFecha">Próxima Cita Fecha</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="EstablecimientoAtencion" class="form-control" />
                                <label asp-for="EstablecimientoAtencion">Establecimiento de Atención</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-clipboard-data me-2"></i>Ayudas Diagnósticas Solicitadas</h5>
                    <hr class="mt-0" />
                    <div class="mb-3">
                        <button type="button" id="btnAgregarAyuda" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> Agregar Ayuda Diagnóstica
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="tablaAyudas">
                            <thead class="table-light">
                                <tr>
                                    <th>Tipo de Ayuda</th>
                                    <th>Descripción</th>
                                    <th>Urgente</th>
                                    <th>Comentario</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Filas dinámicas -->
                            </tbody>
                        </table>
                    </div>

                    <h5 class="mt-4"><i class="bi bi-sticky me-2"></i>Notas Adicionales</h5>
                    <hr class="mt-0" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Consejerias" class="form-control" placeholder="Consejerías" style="height: 100px"></textarea>
                                <label asp-for="Consejerias">Consejerías Brindadas</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Observaciones" class="form-control" placeholder="Observaciones" style="height: 100px"></textarea>
                                <label asp-for="Observaciones">Observaciones</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Listar" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Registrar Control
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ========= MODAL: EMBARAZO (PRENATAL) ========= -->
<div class="modal fade" id="modalEmbarazoPrenatal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Embarazo (Paciente)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarEmbarazoPrenatal"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="text"
                               id="buscarEmbarazoPrenatal"
                               class="form-control form-control-sm text-end"
                               placeholder="DNI"
                               maxlength="8"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>DNI</th>
                            <th>Paciente</th>
                            <th>FUR</th>
                            <th>FPP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (embarazosPrenatal != null)
                        {
                            foreach (var e in embarazosPrenatal)
                            {
                                <tr>
                                    <td>@e.IdEmbarazo</td>
                                    <td>@e.DNIPaciente</td>
                                    <td>@e.NombrePaciente</td>
                                    <td>@e.FUR?.ToString("dd/MM/yyyy")</td>
                                    <td>@e.FPP?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarEmbarazoPrenatal"
                                                data-id="@e.IdEmbarazo"
                                                data-nombre="@e.NombrePaciente">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- ========= MODAL: PROFESIONAL (PRENATAL) ========= -->
<div class="modal fade" id="modalProfesionalPrenatal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Profesional de Salud</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div class="d-flex justify-content-end mb-2">
                    <button type="button"
                            id="btnBuscarProfesionalPrenatal"
                            class="btn btn-primary btn-sm me-2">
                        Buscar
                    </button>
                    <div style="max-width:150px;">
                        <input type="number"
                               id="buscarProfesionalPrenatal"
                               class="form-control form-control-sm text-end"
                               placeholder="ID" />
                    </div>
                </div>

                <table class="table table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>CMP</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (profesionalesPrenatal != null)
                        {
                            foreach (var p in profesionalesPrenatal)
                            {
                                <tr>
                                    <td>@p.IdProfesional</td>
                                    <td>@p.CMP</td>
                                    <td>@(p.Nombres + " " + p.Apellidos)</td>
                                    <td>@p.Especialidad</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-primary btnSeleccionarProfesionalPrenatal"
                                                data-id="@p.IdProfesional"
                                                data-nombre="@(p.Nombres + " " + p.Apellidos)">
                                            Seleccionar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let contadorAyudas = 0;

        document.addEventListener('DOMContentLoaded', function () {

            // Botón agregar ayuda
            document.getElementById('btnAgregarAyuda').addEventListener('click', function () {
                agregarFilaAyuda();
            });

            // Selección desde los modals
            document.addEventListener('click', function (e) {

                // Embarazo (Paciente)
                if (e.target.classList.contains('btnSeleccionarEmbarazoPrenatal')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdEmbarazo').value = id;

                    const modalEl = document.getElementById('modalEmbarazoPrenatal');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Profesional
                if (e.target.classList.contains('btnSeleccionarProfesionalPrenatal')) {
                    const id     = e.target.getAttribute('data-id');

                    document.getElementById('IdProfesional').value = id;

                    const modalEl = document.getElementById('modalProfesionalPrenatal');
                    const modal   = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }

                // Eliminar fila ayuda
                if (e.target.classList.contains('btnEliminarAyuda')) {
                    e.target.closest('tr').remove();
                }
            });

            // Buscar Embarazo por ID
            const btnEmb = document.getElementById("btnBuscarEmbarazoPrenatal");
            const txtEmb = document.getElementById("buscarEmbarazoPrenatal");
            if (btnEmb && txtEmb) {
                btnEmb.addEventListener("click", function () {
                    const filtro = txtEmb.value.trim();
                    const filas = document.querySelectorAll("#modalEmbarazoPrenatal tbody tr");

                    filas.forEach(fila => {
                        const dni = fila.children[1].innerText.trim();
                        fila.style.display = (filtro === "" || dni === filtro) ? "" : "none";
                    });
                });
            }

            // Buscar Profesional por ID
            const btnProf = document.getElementById("btnBuscarProfesionalPrenatal");
            const txtProf = document.getElementById("buscarProfesionalPrenatal");
            if (btnProf && txtProf) {
                btnProf.addEventListener("click", function () {
                    const filtro = txtProf.value.trim();
                    const filas = document.querySelectorAll("#modalProfesionalPrenatal tbody tr");

                    filas.forEach(fila => {
                        const id = fila.children[0].innerText.trim();
                        fila.style.display = (filtro === "" || id === filtro) ? "" : "none";
                    });
                });
            }
        });

        function agregarFilaAyuda() {
            const tbody = document.querySelector('#tablaAyudas tbody');
            const row = document.createElement('tr');

            let opcionesTipo = '<option value="">-- Seleccione --</option>';
            @if (tiposAyuda != null)
            {
                foreach (var tipo in tiposAyuda)
                {
                    <text>opcionesTipo += '<option value="@tipo.Value">@tipo.Text</option>';</text>
                }
            }

            row.innerHTML = `
                <td>
                    <select name="AyudasDiagnosticas[${contadorAyudas}].IdTipoAyuda" class="form-select">
                        ${opcionesTipo}
                    </select>
                </td>
                <td><input type="text" name="AyudasDiagnosticas[${contadorAyudas}].DescripcionAyuda" class="form-control" placeholder="Descripción específica" /></td>
                <td><input type="checkbox" name="AyudasDiagnosticas[${contadorAyudas}].Urgente" value="true" class="form-check-input" /></td>
                <td><input type="text" name="AyudasDiagnosticas[${contadorAyudas}].Comentario" class="form-control" placeholder="Comentario" /></td>
                <td><button type="button" class="btn btn-danger btn-sm btnEliminarAyuda"><i class="bi bi-trash"></i></button></td>
            `;

            tbody.appendChild(row);
            contadorAyudas++;
        }
    </script>
}
