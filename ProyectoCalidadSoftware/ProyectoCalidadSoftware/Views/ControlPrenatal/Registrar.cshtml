@model CapaEntidad.entControlPrenatal

@{
    ViewData["Title"] = "Registrar Control Prenatal";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-clipboard-check"></i> Registrar Control Prenatal</h1>
        <h4>Registro de Control Prenatal</h4>
    </div>

    <form asp-action="Registrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdControl" class="control-label">
                        <i class="bi bi-hash"></i> ID Control
                    </label>
                    <input asp-for="IdControl" class="form-control" />
                    <span asp-validation-for="IdControl" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdEmbarazo" class="control-label">
                        <i class="bi bi-heart-pulse"></i> ID Embarazo
                    </label>
                    <input asp-for="IdEmbarazo" class="form-control" />
                    <span asp-validation-for="IdEmbarazo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdEncuentro" class="control-label">
                        <i class="bi bi-calendar-event"></i> ID Encuentro
                    </label>
                    <input asp-for="IdEncuentro" class="form-control" />
                    <span asp-validation-for="IdEncuentro" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdProfesional" class="control-label">
                        <i class="bi bi-person-badge"></i> ID Profesional
                    </label>
                    <input asp-for="IdProfesional" class="form-control" />
                    <span asp-validation-for="IdProfesional" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="control-label">
                        <i class="bi bi-calendar-date"></i> Fecha del Control
                    </label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="PesoKg" class="control-label">
                        <i class="bi bi-speedometer"></i> Peso (Kg)
                    </label>
                    <input asp-for="PesoKg" class="form-control" type="number" step="0.01" placeholder="Ej: 65.50" />
                    <span asp-validation-for="PesoKg" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TallaM" class="control-label">
                        <i class="bi bi-rulers"></i> Talla (m)
                    </label>
                    <input asp-for="TallaM" class="form-control" type="number" step="0.01" placeholder="Ej: 1.65" />
                    <span asp-validation-for="TallaM" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="control-label">
                        <i class="bi bi-heart-half"></i> Presión Arterial
                    </label>
                    <div class="input-group">
                        <input asp-for="PA_Sistolica" class="form-control" type="number" placeholder="Sistólica" />
                        <span class="input-group-text">/</span>
                        <input asp-for="PA_Diastolica" class="form-control" type="number" placeholder="Diastólica" />
                        <span class="input-group-text">mmHg</span>
                    </div>
                    <span asp-validation-for="PA_Sistolica" class="text-danger"></span>
                    <span asp-validation-for="PA_Diastolica" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="AlturaUterina_cm" class="control-label">
                        <i class="bi bi-bullseye"></i> Altura Uterina (cm)
                    </label>
                    <input asp-for="AlturaUterina_cm" class="form-control" type="number" step="0.1" placeholder="Ej: 25.5" />
                    <span asp-validation-for="AlturaUterina_cm" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FCF_bpm" class="control-label">
                        <i class="bi bi-activity"></i> FCF (bpm)
                    </label>
                    <input asp-for="FCF_bpm" class="form-control" type="number" placeholder="Latidos por minuto" />
                    <span asp-validation-for="FCF_bpm" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Presentacion" class="control-label">
                        <i class="bi bi-body-text"></i> Presentación
                    </label>
                    <select asp-for="Presentacion" class="form-control">
                        <option value="">Seleccionar...</option>
                        <option value="Cefálica">Cefálica</option>
                        <option value="Podálica">Podálica</option>
                        <option value="Transversa">Transversa</option>
                        <option value="Otra">Otra</option>
                    </select>
                    <span asp-validation-for="Presentacion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Proteinuria" class="control-label">
                        <i class="bi bi-droplet"></i> Proteinuria
                    </label>
                    <select asp-for="Proteinuria" class="form-control">
                        <option value="">Seleccionar...</option>
                        <option value="Negativa">Negativa</option>
                        <option value="Trazo">Trazo</option>
                        <option value="1+">1+</option>
                        <option value="2+">2+</option>
                        <option value="3+">3+</option>
                        <option value="4+">4+</option>
                    </select>
                    <span asp-validation-for="Proteinuria" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="MovFetales" />
                    <label class="form-check-label" asp-for="MovFetales">
                        <i class="bi bi-check-circle"></i> Movimientos Fetales Presentes
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Consejerias" class="control-label">
                        <i class="bi bi-chat-quote"></i> Consejerías
                    </label>
                    <textarea asp-for="Consejerias" class="form-control" rows="2" placeholder="Consejerías realizadas..."></textarea>
                    <span asp-validation-for="Consejerias" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Observaciones" class="control-label">
                <i class="bi bi-chat-text"></i> Observaciones
            </label>
            <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Observaciones adicionales..."></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>

        <div class="form-group form-check mb-4">
            <input class="form-check-input" asp-for="Estado" />
            <label class="form-check-label" asp-for="Estado">
                <i class="bi bi-check-circle"></i> Activo
            </label>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Registrar Control" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
