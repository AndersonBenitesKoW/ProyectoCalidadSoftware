@model CapaEntidad.entControlPrenatal

@{
    ViewData["Title"] = "Inhabilitar Control Prenatal";
}

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Inhabilitación</h1>
        <h3>¿Está seguro de que desea inhabilitar este control prenatal?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles del Control Prenatal</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-hash"></i> ID Control
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdControl)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-heart-pulse"></i> ID Embarazo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdEmbarazo)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-event"></i> ID Encuentro
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdEncuentro)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> ID Profesional
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdProfesional)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar-date"></i> Fecha del Control
            </dt>
            <dd class="col-sm-9">
                @Model.Fecha.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-speedometer"></i> Peso (Kg)
            </dt>
            <dd class="col-sm-9">
                @(Model.PesoKg.HasValue ? Model.PesoKg.Value.ToString("N2") : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-rulers"></i> Talla (m)
            </dt>
            <dd class="col-sm-9">
                @(Model.TallaM.HasValue ? Model.TallaM.Value.ToString("N2") : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-heart-half"></i> Presión Arterial
            </dt>
            <dd class="col-sm-9">
                @(Model.PA_Sistolica.HasValue && Model.PA_Diastolica.HasValue ?
                  $"{Model.PA_Sistolica}/{Model.PA_Diastolica} mmHg" : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-bullseye"></i> Altura Uterina (cm)
            </dt>
            <dd class="col-sm-9">
                @(Model.AlturaUterina_cm.HasValue ? Model.AlturaUterina_cm.Value.ToString("N1") : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-activity"></i> FCF (bpm)
            </dt>
            <dd class="col-sm-9">
                @(Model.FCF_bpm.HasValue ? Model.FCF_bpm.Value.ToString() : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-body-text"></i> Presentación
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Presentacion)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-droplet"></i> Proteinuria
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Proteinuria)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> Movimientos Fetales
            </dt>
            <dd class="col-sm-9">
                @(Model.MovFetales.HasValue ? (Model.MovFetales.Value ? "Presentes" : "Ausentes") : "No registrado")
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-quote"></i> Consejerías
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Consejerias)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-text"></i> Observaciones
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Observaciones)
            </dd>
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> Estado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción inhabilitará el control prenatal. El registro quedará inactivo pero no se eliminará permanentemente.
        </div>

        <form asp-action="Inhabilitar" class="mt-4">
            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Inhabilitar Control" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
