@model IEnumerable<CapaEntidad.entControlPrenatal>

@{
    ViewData["Title"] = "Controles Prenatales";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0"><i class="bi bi-stethoscope"></i> @ViewData["Title"]</h1>
        <p class="text-muted mb-0">Seguimiento de todos los controles registrados</p>
    </div>
    <a asp-action="Registrar" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Registrar Control
    </a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
    </div>
}


<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                <h4 class="text-muted mt-3">No hay controles registrados</h4>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Paciente</th>
                            <th>Fecha</th>
                            <th>Profesional</th>
                            <th>Peso (Kg)</th>
                            <th>PA (sis/dia)</th>
                            <th>AU (cm)</th>
                            <th>FCF (lpm)</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombrePaciente</td>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@item.NombreProfesional</td>
                                <td>@item.PesoKg</td>
                                <td>@item.PA_Sistolica / @item.PA_Diastolica</td>
                                <td>@item.AlturaUterina_cm</td>
                                <td>@item.FCF_bpm</td>
                                <td class="text-center">
                                    @{
                                        string clase = item.Estado ? "bg-success" : "bg-danger";
                                        string texto = item.Estado ? "Activo" : "Inhabilitado";
                                    }
                                    <span class="badge @clase">@texto</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.IdControlPrenatal" class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="bi bi-search"></i>
                                        </a>
                                        @if (item.Estado && (ViewBag.IdProfesionalActual == null || item.IdProfesional == ViewBag.IdProfesionalActual))
                                        {
                                            <a asp-action="Inhabilitar" asp-route-id="@item.IdControlPrenatal" class="btn btn-sm btn-outline-danger" title="Inhabilitar">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>