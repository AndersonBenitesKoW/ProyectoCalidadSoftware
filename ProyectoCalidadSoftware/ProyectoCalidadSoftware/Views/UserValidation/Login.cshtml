@model CapaEntidad.entLogin
@{
    ViewData["Title"] = "Iniciar sesión - Clínica Maternal";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- usa el CSS que pegaste, guárdalo como /css/auth.css -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>

<div class="container">
    <div class="main-content">
        <!-- lado izquierdo -->
        <div class="branding-section">
            <div class="clinic-header">
                <div class="clinic-logo">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="clinic-info">
                    <h1>Clínica Maternal</h1>
                    <p>Especialistas en Obstetricia</p>
                </div>
            </div>

            <div class="clinic-description">
                <p>Cuidamos de ti y tu bebé. Ingresa para ver tus citas, controles prenatales y seguimiento del puerperio.</p>
            </div>

            <div class="features">
                <div class="feature-card">
                    <i class="fas fa-shield-alt"></i>
                    <div class="feature-content">
                        <h3>Seguridad médica</h3>
                        <p>Datos protegidos y cifrados</p>
                    </div>
                </div>
                <div class="feature-card">
                    <i class="fas fa-calendar-check"></i>
                    <div class="feature-content">
                        <h3>Citas en línea</h3>
                        <p>Agenda y reprograma fácilmente</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- lado derecho -->
        <div class="auth-section">
            <div class="auth-card">
                <!-- encabezado móvil -->
                <div class="mobile-header">
                    <div class="mobile-clinic-info">
                        <i class="fas fa-heart"></i>
                        <h1>Clínica Maternal</h1>
                    </div>
                    <p>Portal de Pacientes</p>
                </div>

                <!-- SOLO LOGIN -->
                <h2 style="color:white; margin-bottom:1rem;">
                    <i class="fas fa-sign-in-alt"></i> Iniciar sesión
                </h2>

                <!-- contenedor de mensajes -->
                <div id="message-container" class="message-container"></div>

                <form id="login-form" asp-action="Login" method="post" class="auth-form active">
                    <!-- credenciales demo -->
                    <div class="demo-credentials">
                        <div class="demo-header" style="display:flex;align-items:center;justify-content:space-between;gap:.75rem;margin-bottom:.5rem;">
                            <span style="color:white;display:flex;gap:.35rem;align-items:center;">
                                <i class="fas fa-info-circle"></i> Credenciales de prueba
                            </span>
                            <button type="button" class="demo-toggle" style="background:none;border:none;color:white;cursor:pointer;">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="demo-list" id="demo-credentials" style="display:none;">
                            <div class="demo-item" style="color:white;">paciente1 / test123</div>
                            <div class="demo-item" style="color:white;">cliente1 / demo123</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="login-username">
                            <i class="fas fa-user"></i> Usuario
                        </label>
                        <input type="text" id="login-username" name="nombreUsuario" required />
                    </div>

                    <div class="form-group">
                        <label for="login-password">
                            <i class="fas fa-lock"></i> Contraseña
                        </label>
                        <div class="password-input">
                            <input type="password" id="login-password" name="clave" required />
                            <button type="button" class="toggle-password" data-target="login-password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- captcha -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-shield-alt"></i> Captcha visual
                        </label>
                        <div class="captcha-container">
                            <canvas id="captcha-canvas" width="280" height="80"></canvas>
                            <div class="captcha-input-group">
                                <input type="text" id="captcha-answer" name="captcha" placeholder="Escribe los caracteres" required />
                                <button type="button" class="refresh-captcha" onclick="generateVisualCaptcha()">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-label">
                            <input type="checkbox" name="remember-me" />
                            <i class="fas fa-memory"></i>
                            Recordar contraseña
                        </label>
                        <button type="button" class="forgot-password-btn" id="btn-forgot">
                            ¿Olvidaste tu contraseña?
                        </button>
                    </div>

                    <div class="form-group">
                        <label class="checkbox-label privacy-label">
                            <input type="checkbox" name="privacy-login" id="privacy-login" required />
                            <i class="fas fa-file-contract"></i>
                            Acepto la
                            <button type="button" class="privacy-link">Declaratoria de Privacidad</button>
                        </label>
                    </div>

                    <button type="submit" class="submit-btn">
                        <i class="fas fa-sign-in-alt"></i> Iniciar sesión
                    </button>

                    <div class="attempts-info">
                        <i class="fas fa-info-circle"></i>
                        <span id="login-attempts">Intentos restantes: 3</span>
                    </div>
                </form>

                <!-- link para ir al registro -->
                <div style="margin-top:1.25rem; text-align:center; color:white;">
                    ¿No tienes cuenta?
                    <a href="/Portal/Register" style="color:#fff; text-decoration:underline; font-weight:600;">Regístrate aquí</a>
                </div>
            </div>
        </div>
    </div>

    <!-- modal privacidad -->
    <div id="privacy-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-file-contract"></i> Declaratoria de Privacidad</h2>
                <button class="close-modal"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <p>Texto de la declaratoria…</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/script.js"></script>
}