@model IEnumerable<CapaEntidad.entParto>

@{
    ViewData["Title"] = "Listado de Partos Registrados";

    // Lógica para el botón de filtro
    bool mostrandoActivos = ViewBag.MostrandoActivos ?? true;
    string botonTexto = mostrandoActivos ? "Mostrar Anulados" : "Mostrar Activos";
    string botonIcono = mostrandoActivos ? "bi-eye-slash" : "bi-eye";
    string botonClase = mostrandoActivos ? "btn-outline-danger" : "btn-outline-primary";
    bool proximoEstado = !mostrandoActivos;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6 mb-0">@ViewData["Title"]</h1>
    <a asp-action="RegistrarParto" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Parto
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted">Partos en el Sistema</h5>
        <a asp-action="Index" asp-route-mostrarActivos="@proximoEstado" class="btn @botonClase btn-sm">
            <i class="bi @botonIcono me-2"></i>@botonTexto
        </a>
    </div>
    <div class="card-body p-0">

        @if (!Model.Any())
        {
            <div class="alert alert-warning m-3" role="alert">
                No hay partos registrados que coincidan con el filtro actual.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID Parto</th>
                        <th>Paciente</th>
                        <th>Fecha del Parto</th>
                        <th>Vía de Parto</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Lógica para el color del "badge" de estado
                        var estadoClase = item.Estado ? "bg-success" : "bg-secondary";
                        var estadoTexto = item.Estado ? "Activo" : "Anulado";

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdParto)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombrePaciente)</td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@Html.DisplayFor(modelItem => item.DescripcionViaParto)</td>
                            <td class="text-center">
                                <span class="badge @estadoClase">@estadoTexto</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="DetallesParto" asp-route-id="@item.IdParto" class="btn btn-sm btn-outline-primary" title="Detalles">
                                    <i class="bi bi-search"></i>
                                </a>

                                @if (item.Estado)
                                {
                                    <form asp-action="AnularParto"
                                          asp-route-id="@item.IdParto"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('¿Está seguro de que desea anular este registro de parto?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="idParto" value="@item.IdParto" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Anular">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>