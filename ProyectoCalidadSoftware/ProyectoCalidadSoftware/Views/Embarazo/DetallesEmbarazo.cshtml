@model CapaEntidad.entEmbarazo

@{
    ViewData["Title"] = "Detalles del Embarazo";

    // Lógica para el color del "badge" de estado
    var estadoClase = Model.Estado ? "bg-success" : "bg-secondary";
    var estadoTexto = Model.Estado ? "Activo" : "Cerrado/Inactivo";

    // Lógica para el color del riesgo
    var riesgoClase = (Model.Riesgo?.ToLower().Contains("alto") ?? false) ? "bg-danger" :
                    (Model.Riesgo?.ToLower().Contains("medio") ?? false) ? "bg-warning text-dark" : "bg-info text-dark";
}

<style>
    .details-list dt {
        font-weight: 600;
        color: #555;
    }

    .details-list dd {
        font-size: 1.1rem;
        color: #222;
        margin-bottom: .5rem;
    }

        .details-list dd:empty::after {
            content: "-- No registrado --";
            font-size: 1rem;
            font-style: italic;
            color: #999;
        }

    .card-header .bi {
        margin-right: 0.5rem;
        font-size: 1.2rem;
        vertical-align: text-bottom;
        color: var(--bs-primary);
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6 mb-0">@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-2"></i>Volver al Listado
    </a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <div>
            <h4 class="mb-0 text-primary"><i class="bi bi-person-hearts"></i> @Model.NombrePaciente</h4>
            <span class="text-muted">ID Paciente: @Model.IdPaciente | ID Embarazo: @Model.IdEmbarazo</span>
        </div>
        <span class="badge @estadoClase fs-6">@estadoTexto</span>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4 h-100">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-calendar-event"></i>Fechas Clave</h5>
            </div>
            <div class="card-body">
                <dl class="row details-list">
                    <dt class="col-sm-5">Fecha de Última Regla (FUR)</dt>
                    <dd class="col-sm-7">@Model.FUR?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-5">Fecha Probable de Parto (FPP)</dt>
                    <dd class="col-sm-7 fw-bold text-success">@Model.FPP?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-5">Fecha Apertura de Historia</dt>
                    <dd class="col-sm-7">@Model.FechaApertura.ToString("g")</dd>

                    <dt class="col-sm-5">Fecha Cierre de Historia</dt>
                    <dd class="col-sm-7">@Model.FechaCierre?.ToString("g")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm mb-4 h-100">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill text-danger"></i>Nivel de Riesgo</h5>
            </div>
            <div class="card-body text-center d-flex flex-column justify-content-center">
                @if (!string.IsNullOrEmpty(Model.Riesgo))
                {
                    <span class="badge @riesgoClase fs-4 p-3">@Model.Riesgo</span>
                }
                else
                {
                    <span class="text-muted fst-italic">-- No registrado --</span>
                }
            </div>
        </div>
    </div>
</div>