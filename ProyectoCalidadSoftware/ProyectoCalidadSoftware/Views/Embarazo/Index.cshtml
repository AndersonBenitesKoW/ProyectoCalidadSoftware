@model IEnumerable<CapaEntidad.entEmbarazo>

@{
    ViewData["Title"] = "Listado de Embarazos";

    // Lógica para el botón de filtro
    bool mostrandoActivos = ViewBag.MostrandoActivos ?? true;
    string botonTexto = mostrandoActivos ? "Mostrar Inactivos" : "Mostrar Activos";
    string botonIcono = mostrandoActivos ? "bi-eye-slash" : "bi-eye";
    string botonClase = mostrandoActivos ? "btn-outline-secondary" : "btn-outline-primary";
    bool proximoEstado = !mostrandoActivos;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6 mb-0">@ViewData["Title"]</h1>
    <a asp-action="RegistrarEmbarazo" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Embarazo
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error</div>
}
@if (ViewBag.Advertencia != null)
{
    <div class="alert alert-warning"><i class="bi bi-exclamation-triangle me-2"></i> @ViewBag.Advertencia</div>
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted">Embarazos Registrados</h5>
        <a asp-action="Index" asp-route-mostrarActivos="@proximoEstado" class="btn @botonClase btn-sm">
            <i class="bi @botonIcono me-2"></i>@botonTexto
        </a>
    </div>
    <div class="card-body p-0">

        @if (!Model.Any())
        {
            <div class="alert alert-info m-3" role="alert">
                No hay embarazos que coincidan con el filtro actual.
            </div>
        }
        else
        {
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Paciente</th>
                        <th>FPP (Fecha Probable Parto)</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Lógica para el color del "badge" de estado
                        var estadoClase = item.Estado ? "bg-success" : "bg-secondary";
                        var estadoTexto = item.Estado ? "Activo" : "Cerrado";

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdEmbarazo)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombrePaciente)</td>
                            <td>@item.FPP?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <span class="badge @estadoClase">@estadoTexto</span>
                            </td>
                            <td class="text-end">

                                <a asp-action="DetallesEmbarazo" asp-route-id="@item.IdEmbarazo" class="btn btn-sm btn-outline-primary" title="Detalles">
                                    <i class="bi bi-search"></i> Detalles
                                </a>

                                @if (item.Estado)
                                {
                                    <form asp-action="CerrarEmbarazo" asp-route-id="@item.IdEmbarazo" method="post" style="display:inline;"
                                          onsubmit="return confirm('¿Está seguro de que desea cerrar/anular este embarazo? Esta acción es irreversible.');">

                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Cerrar / Anular">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>