@model CapaEntidad.entEmbarazo

@{
    ViewData["Title"] = "Registrar Nuevo Embarazo";
}

<div class="row">
    <div class="col-md-8 col-lg-7 mx-auto">

        <h1 class="display-6">@ViewData["Title"]</h1>
        <p class="lead text-muted">Complete los datos para registrar un nuevo embarazo en el sistema.</p>
        <hr />

        @if (ViewBag.MensajeError != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.MensajeError
            </div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="RegistrarEmbarazo" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="card shadow-sm border-light-subtle">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2 text-primary"></i>Datos de la Paciente y Embarazo</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">

                        <div class="col-12">
                            <label asp-for="IdPaciente" class="form-label fw-bold"><i class="bi bi-person-vcard me-1"></i> Seleccionar Paciente</label>
                            <select asp-for="IdPaciente" class="form-select" asp-items="@ViewBag.ListaPacientes" required>
                                <option value="">-- Seleccione una Paciente --</option>
                            </select>
                            <span asp-validation-for="IdPaciente" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FUR" class="form-label"><i class="bi bi-calendar-heart me-1"></i> Fecha de Última Regla (FUR)</label>
                            <input asp-for="FUR" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                            <span asp-validation-for="FUR" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FPP" class="form-label"><i class="bi bi-calendar-check me-1"></i> Fecha Probable de Parto (FPP)</label>
                            <input asp-for="FPP" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                            <span asp-validation-for="FPP" class="text-danger"></span>
                            <div class="form-text">Si se deja vacío, se calculará automáticamente con la FUR.</div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Riesgo" class="form-label"><i class="bi bi-exclamation-triangle me-1"></i> Nivel de Riesgo</label>
                            <input asp-for="Riesgo" type="text" class="form-control" placeholder="Ej: Alto Riesgo Obstétrico" />
                            <span asp-validation-for="Riesgo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-end">
                <a asp-action="Index" asp-controller="Embarazo" class="btn btn-secondary me-2">
                    <i class="bi bi-x-circle me-2"></i>Volver al Listado
                </a>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>Registrar Embarazo
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}