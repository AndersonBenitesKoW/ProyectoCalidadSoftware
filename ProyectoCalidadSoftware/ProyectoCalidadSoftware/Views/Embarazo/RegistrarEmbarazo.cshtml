@model CapaEntidad.entEmbarazo

@{
    ViewData["Title"] = "Registrar Nuevo Embarazo";
}

<h1>@ViewData["Title"]</h1>
<p>Complete los datos para registrar un nuevo embarazo.</p>
<hr />

<div class="row">
    <div class="col-md-6">

        <form asp-action="RegistrarEmbarazo" method="post">

            @Html.AntiForgeryToken()

            @* Muestra de Errores Generales *@
            @if (ViewBag.MensajeError != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.MensajeError
                </div>
            }
            @* Añadir también el ViewBag.Error por si falla CargarViewBags *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.Error
                </div>
            }
            @* Mensaje de éxito *@
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["MensajeExito"]
                </div>
            }


            <div class="card shadow-sm">
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="IdPaciente" class="form-label">Seleccionar Paciente</label>
                        <select asp-for="IdPaciente" class="form-select" asp-items="@ViewBag.ListaPacientes">
                            <option value="">-- Seleccione una Paciente --</option>
                        </select>
                        <span asp-validation-for="IdPaciente" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FUR" class="form-label">Fecha de Última Regla (FUR)</label>
                        <input asp-for="FUR" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                        <span asp-validation-for="FUR" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FPP" class="form-label">Fecha Probable de Parto (FPP)</label>
                        <input asp-for="FPP" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                        <span asp-validation-for="FPP" class="text-danger"></span>
                        <div class="form-text">Si dejas esto vacío, se calculará automáticamente si la FUR está presente.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Riesgo" class="form-label">Nivel de Riesgo</label>
                        <input asp-for="Riesgo" type="text" class="form-control" placeholder="Ej: Alto Riesgo Obstétrico" />
                        <span asp-validation-for="Riesgo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <input type="submit" value="Registrar Embarazo" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Embarazo" class="btn btn-secondary">Volver al Listado</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}