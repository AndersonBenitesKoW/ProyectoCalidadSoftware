@model CapaEntidad.entFactorRiesgoCat

@{
    ViewData["Title"] = "Insertar Factor de Riesgo Categoría";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-plus-square"></i> Insertar Factor de Riesgo Categoría</h1>
        <h4>Registro de nueva categoría de factor de riesgo</h4>
    </div>

    <form asp-action="Insertar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdFactorCat" class="control-label">
                        <i class="bi bi-hash"></i> ID Factor Categoría
                    </label>
                    <input asp-for="IdFactorCat" class="form-control" />
                    <span asp-validation-for="IdFactorCat" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="control-label">
                        <i class="bi bi-tag"></i> Nombre de la Categoría
                    </label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Diabetes, Hipertensión, Obesidad..." />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    <small class="form-text text-muted">Ingrese un nombre descriptivo para la categoría de factor de riesgo</small>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Insertar Categoría" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
