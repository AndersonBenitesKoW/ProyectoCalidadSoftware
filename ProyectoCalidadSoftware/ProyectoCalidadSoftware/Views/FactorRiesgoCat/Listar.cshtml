@model IEnumerable<CapaEntidad.entFactorRiesgoCat>

@{
    ViewData["Title"] = "Listar Factores de Riesgo Categoría";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-tags"></i> Categorías de Factores de Riesgo</h1>
            <p class="text-muted mb-0">Gestión de categorías para clasificar factores de riesgo</p>
        </div>
        <a asp-action="Insertar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-hash"></i> ID Categoría</th>
                    <th><i class="bi bi-tag"></i> Nombre de la Categoría</th>
                    <th><i class="bi bi-gear"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdFactorCat)</td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                            <br />
                            <small class="text-muted">Categoría de factor de riesgo médico</small>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Actualizar" asp-route-id="@item.IdFactorCat" class="btn btn-sm btn-outline-primary" title="Actualizar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Eliminar" asp-route-id="@item.IdFactorCat" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any()) {
        <div class="text-center py-5">
            <i class="bi bi-tags text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay categorías de factores de riesgo registradas</h4>
            <p class="text-muted">Comience creando categorías para clasificar los factores de riesgo médicos.</p>
            <a asp-action="Insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Primera Categoría
            </a>
        </div>
    } else {
        <div class="mt-3">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Total de Categorías:</strong> @Model.Count() categorías registradas para clasificación de factores de riesgo.
            </div>
        </div>
    }
</div>
