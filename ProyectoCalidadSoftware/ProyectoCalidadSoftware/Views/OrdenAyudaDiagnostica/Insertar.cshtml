@model CapaEntidad.entAyudaDiagnosticaOrden

@{
    ViewData["Title"] = "Insertar Orden de Ayuda Diagnóstica";
}

<div class="form-container">
    <div class="form-header">
        <h1><i class="bi bi-clipboard-plus"></i> Insertar Orden de Ayuda Diagnóstica</h1>
        <h4>Registro de nueva orden de ayuda diagnóstica para paciente</h4>
    </div>

    <form asp-action="Insertar" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdPaciente" class="control-label">
                        <i class="bi bi-person"></i> ID Paciente
                    </label>
                    <input asp-for="IdPaciente" class="form-control" type="number" placeholder="Ingrese ID del paciente" />
                    <span asp-validation-for="IdPaciente" class="text-danger"></span>
                    <small class="form-text text-muted">Identificador único del paciente</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdEmbarazo" class="control-label">
                        <i class="bi bi-heart-pulse"></i> ID Embarazo (Opcional)
                    </label>
                    <input asp-for="IdEmbarazo" class="form-control" type="number" placeholder="Ingrese ID del embarazo" />
                    <span asp-validation-for="IdEmbarazo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdProfesional" class="control-label">
                        <i class="bi bi-person-badge"></i> ID Profesional (Opcional)
                    </label>
                    <input asp-for="IdProfesional" class="form-control" type="number" placeholder="Ingrese ID del profesional" />
                    <span asp-validation-for="IdProfesional" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="IdTipoAyuda" class="control-label">
                        <i class="bi bi-diagram-3"></i> Tipo de Ayuda
                    </label>
                    <input asp-for="IdTipoAyuda" class="form-control" type="number" placeholder="Ingrese tipo de ayuda" />
                    <span asp-validation-for="IdTipoAyuda" class="text-danger"></span>
                    <small class="form-text text-muted">Código del tipo de ayuda diagnóstica</small>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FechaOrden" class="control-label">
                        <i class="bi bi-calendar-date"></i> Fecha de Orden
                    </label>
                    <input asp-for="FechaOrden" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaOrden" class="text-danger"></span>
                    <small class="form-text text-muted">Seleccione fecha y hora de la orden</small>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="Urgente" />
                    <label class="form-check-label" asp-for="Urgente">
                        <i class="bi bi-exclamation-triangle"></i> Urgente
                    </label>
                    <small class="form-text text-muted">Marque si la orden es urgente</small>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="control-label">
                <i class="bi bi-chat-text"></i> Descripción
            </label>
            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Describa la ayuda diagnóstica requerida"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
            <small class="form-text text-muted">Descripción detallada de la ayuda diagnóstica</small>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Listar" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <input type="submit" value="Insertar Orden" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
