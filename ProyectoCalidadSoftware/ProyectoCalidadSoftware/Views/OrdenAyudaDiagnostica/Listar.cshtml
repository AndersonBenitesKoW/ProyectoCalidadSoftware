@model IEnumerable<CapaEntidad.entAyudaDiagnosticaOrden>

@{
    ViewData["Title"] = "Listar Órdenes de Ayuda Diagnóstica";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-clipboard-data"></i> Órdenes de Ayuda Diagnóstica</h1>
            <p class="text-muted mb-0">Gestión de órdenes de ayudas diagnósticas para pacientes</p>
        </div>
        <a asp-action="Insertar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Orden
        </a>
    </div>

    @* Mensajes (por si los usas con TempData en el futuro) *@
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="bi bi-check2-circle"></i> @TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="bi bi-x-circle"></i> @TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-clipboard-x text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">No hay órdenes de ayuda diagnóstica registradas</h4>
            <p class="text-muted">Comience creando una nueva orden de ayuda diagnóstica.</p>
            <a asp-action="Insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Primera Orden
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash"></i> ID Ayuda</th>
                        <th><i class="bi bi-person"></i> ID Paciente</th>
                        <th><i class="bi bi-heart-pulse"></i> ID Embarazo</th>
                        <th><i class="bi bi-person-badge"></i> ID Profesional</th>
                        <th><i class="bi bi-diagram-3"></i> Tipo Ayuda</th>
                        <th><i class="bi bi-chat-text"></i> Descripción</th>
                        <th><i class="bi bi-exclamation-triangle"></i> Urgente</th>
                        <th><i class="bi bi-calendar-date"></i> Fecha Orden</th>
                        <th><i class="bi bi-check-circle"></i> Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var estadoActivo = string.Equals(item.Estado, "Activo", StringComparison.OrdinalIgnoreCase)
                        || string.Equals(item.Estado, "ACTIVO", StringComparison.OrdinalIgnoreCase);
                        <tr>
                            <td>@item.IdAyuda</td>
                            <td>@item.IdPaciente</td>
                            <td>@item.IdEmbarazo</td>
                            <td>@item.IdProfesional</td>
                            <td>@item.IdTipoAyuda</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Descripcion))
                                {
                                    <span title="@item.Descripcion">
                                        @(item.Descripcion.Length > 30 ? item.Descripcion.Substring(0, 30) + "..." : item.Descripcion)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                            </td>
                            <td>
                                @if (item.Urgente)
                                {
                                    <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-dash-circle"></i> No</span>
                                }
                            </td>
                            <td>@item.FechaOrden.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (estadoActivo)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Total de Órdenes:</strong> @Model.Count() órdenes registradas.
            </div>
        </div>
    }
</div>
