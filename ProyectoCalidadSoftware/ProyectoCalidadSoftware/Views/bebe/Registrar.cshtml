@model CapaEntidad.entBebe

@{
    ViewData["Title"] = "Registrar Bebé";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm" style="border-color: #87CEEB;">
                <div class="card-header" style="background-color: #87CEEB; color: white;">
                    <h2 class="mb-0"><i class="fas fa-baby"></i> Registrar Nuevo Bebé</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Registrar">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdBebe" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="IdBebe" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="IdBebe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdParto" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="IdParto" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="IdParto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EstadoBebe" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="EstadoBebe" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="EstadoBebe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Sexo" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="Sexo" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="Sexo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Apgar1" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="Apgar1" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="Apgar1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Apgar5" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="Apgar5" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="Apgar5" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PesoGr" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="PesoGr" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="PesoGr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TallaCm" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="TallaCm" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="TallaCm" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PerimetroCefalico" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="PerimetroCefalico" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="PerimetroCefalico" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EG_Semanas" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="EG_Semanas" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="EG_Semanas" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Reanimacion" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <input asp-for="Reanimacion" class="form-control" style="border-color: #87CEEB;" />
                                    <span asp-validation-for="Reanimacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Observaciones" class="form-label fw-bold" style="color: #4682B4;"></label>
                                    <textarea asp-for="Observaciones" class="form-control" rows="3" style="border-color: #87CEEB;"></textarea>
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="Estado" style="border-color: #87CEEB;" />
                            <label class="form-check-label fw-bold" style="color: #4682B4;">
                                @Html.DisplayNameFor(model => model.Estado)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Registrar Bebé" class="btn btn-primary btn-lg" style="background-color: #00BFFF; border-color: #00BFFF;" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="listar" class="btn btn-outline-secondary" style="border-color: #87CEEB; color: #87CEEB;">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
