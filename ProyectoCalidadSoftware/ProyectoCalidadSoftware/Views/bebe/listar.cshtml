@model IEnumerable<CapaEntidad.entBebe>

@{
    ViewData["Title"] = "Lista de Bebés";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm" style="border-color: #87CEEB;">
                <div class="card-header" style="background-color: #87CEEB; color: white;">
                    <h2 class="mb-0"><i class="fas fa-baby"></i> Lista de Bebés</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-action="Registrar" class="btn btn-primary" style="background-color: #00BFFF; border-color: #00BFFF;">
                            <i class="fas fa-plus"></i> Registrar Nuevo Bebé
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead style="background-color: #E0F6FF;">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.IdBebe)</th>
                                    <th>@Html.DisplayNameFor(model => model.IdParto)</th>
                                    <th>@Html.DisplayNameFor(model => model.EstadoBebe)</th>
                                    <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                                    <th>@Html.DisplayNameFor(model => model.Apgar1)</th>
                                    <th>@Html.DisplayNameFor(model => model.Apgar5)</th>
                                    <th>@Html.DisplayNameFor(model => model.PesoGr)</th>
                                    <th>@Html.DisplayNameFor(model => model.TallaCm)</th>
                                    <th>@Html.DisplayNameFor(model => model.PerimetroCefalico)</th>
                                    <th>@Html.DisplayNameFor(model => model.EG_Semanas)</th>
                                    <th>@Html.DisplayNameFor(model => model.Reanimacion)</th>
                                    <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
                                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.IdBebe)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IdParto)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EstadoBebe)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Apgar1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Apgar5)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PesoGr)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TallaCm)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PerimetroCefalico)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EG_Semanas)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Reanimacion)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Observaciones)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdBebe" class="btn btn-sm btn-outline-primary me-1" style="border-color: #00BFFF; color: #00BFFF;">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IdBebe" class="btn btn-sm btn-outline-info me-1" style="border-color: #87CEEB; color: #87CEEB;">
                                                <i class="fas fa-eye"></i> Detalles
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdBebe" class="btn btn-sm btn-outline-danger" style="border-color: #FF6347; color: #FF6347;">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
