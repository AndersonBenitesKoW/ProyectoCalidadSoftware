                            </button>
                        </form>
                        <a class="btn btn-cta-secondary" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-cogs me-1"></i>Panel Admin
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-cta-primary" asp-controller="Portal" asp-action="Citas">
                            <i class="fas fa-calendar-plus me-2"></i>Reservar Cita
                        </a>
                        <a class="btn btn-cta-secondary" asp-controller="Portal" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </a>
                        <a class="btn btn-cta-outline" asp-controller="Portal" asp-action="Register">
                            <i class="fas fa-user-plus me-2"></i>Registrarse
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="public-body">
        @RenderBody()
    </div>

    <!-- Footer Moderno -->
    <footer class="bg-gradient-primary text-white py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="brand-icon me-3">
                            <i class="fas fa-heartbeat"></i>
                        </div>
                        <span class="fw-bold fs-5">Clínica Obstétrica</span>
                    </div>
                    <p class="mb-4 opacity-75">Cuidamos de ti y tu bebé con atención integral en embarazo, parto y puerperio. Tu salud y bienestar son nuestra prioridad.</p>
                    <div class="social-links">
                        <a href="#" class="text-white me-3 fs-4"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white me-3 fs-4"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white me-3 fs-4"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white fs-4"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">Enlaces Rápidos</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Sobre Nosotros</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Nuestros Servicios</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Equipo Médico</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Instalaciones</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Preguntas Frecuentes</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">Información de Contacto</h5>
                    <div class="contact-info">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Av. Larco 1234, Trujillo, Perú</p>
                        <p class="mb-2"><i class="fas fa-phone me-2"></i>(044) 123-4567</p>
                        <p class="mb-2"><i class="fas fa-envelope me-2"></i>info@clinicaobstetrica.pe</p>
                        <p class="mb-2"><i class="fas fa-clock me-2"></i>Lun - Sáb: 8:00 AM - 6:00 PM</p>
                        <p class="mb-0"><i class="fas fa-clock me-2"></i>Domingo: Emergencias 24/7</p>
                    </div>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="text-center">
                <p class="mb-0 opacity-75">&copy; 2025 Clínica Obstétrica. Todos los derechos reservados.</p>
                <p class="mb-0 mt-2 small opacity-50">Desarrollado con <i class="fas fa-heart text-danger"></i> para cuidar de ti</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Animaciones de entrada
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observar elementos para animar
            document.querySelectorAll('.card, .hero-public').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });

        // Efectos hover en cards
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
