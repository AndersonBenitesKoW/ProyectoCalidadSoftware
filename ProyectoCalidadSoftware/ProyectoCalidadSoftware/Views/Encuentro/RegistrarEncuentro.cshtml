@model CapaEntidad.entEncuentro

@{
    ViewData["Title"] = "Registrar Nuevo Encuentro";
}

<h1>@ViewData["Title"]</h1>
<p>Este formulario crea un nuevo "Encuentro" (ej. de Intraparto) que luego puede ser seleccionado en el formulario de Parto.</p>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-action="RegistrarEncuentro" method="post">

            @Html.AntiForgeryToken()

            @* Muestra de Errores Generales *@
            @if (ViewBag.MensajeError != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.MensajeError
                </div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="IdEmbarazo" class="form-label">Embarazo (Paciente)</label>
                        <select asp-for="IdEmbarazo" class="form-select" asp-items="@ViewBag.ListaEmbarazos">
                            <option value="">-- Seleccione un Embarazo --</option>
                        </select>
                        <span asp-validation-for="IdEmbarazo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdTipoEncuentro" class="form-label">Tipo de Encuentro</label>
                        <select asp-for="IdTipoEncuentro" class="form-select" asp-items="@ViewBag.ListaTipos">
                            <option value="">-- Seleccione el Tipo --</option>
                        </select>
                        <span asp-validation-for="IdTipoEncuentro" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdProfesional" class="form-label">Profesional Asignado</label>
                        <select asp-for="IdProfesional" class="form-select" asp-items="@ViewBag.ListaProfesionales">
                            <option value="">-- (Opcional) --</option>
                        </select>
                        <span asp-validation-for="IdProfesional" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaHoraInicio" class="form-label">Fecha y Hora de Inicio</label>
                        <input asp-for="FechaHoraInicio" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaHoraInicio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label">Estado del Encuentro</label>
                        <input asp-for="Estado" type="text" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notas" class="form-label">Notas (Opcional)</label>
                        <textarea asp-for="Notas" class="form-control" rows="3"></textarea>
                    </div>

                </div>
            </div>

            <div class="mt-3">
                <input type="submit" value="Registrar Encuentro" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}