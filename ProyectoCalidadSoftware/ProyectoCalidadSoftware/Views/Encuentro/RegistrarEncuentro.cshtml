@model CapaEntidad.entEncuentro

@{
    ViewData["Title"] = "Registrar Nuevo Encuentro";
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">
                        <i class="fas fa-handshake fa-2x mb-2"></i><br>
                        Registrar Nuevo Encuentro
                    </h3>
                    <p class="mb-0 small">Registre un nuevo encuentro médico para el seguimiento del embarazo</p>
                </div>
                <div class="card-body p-5">
                    <form asp-action="RegistrarEncuentro" method="post" novalidate class="needs-validation">
                        @Html.AntiForgeryToken()

                        @* Muestra de Errores Generales *@
                        @if (ViewBag.MensajeError != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.MensajeError
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="IdEmbarazo" class="form-select form-select-lg" asp-items="@ViewBag.ListaEmbarazos" required>
                                        <option value="">-- Seleccione un Embarazo --</option>
                                    </select>
                                    <label asp-for="IdEmbarazo" class="form-label">
                                        <i class="fas fa-baby me-2"></i>Embarazo (Paciente)
                                    </label>
                                    <span asp-validation-for="IdEmbarazo" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="IdTipoEncuentro" class="form-select form-select-lg" asp-items="@ViewBag.ListaTipos" required>
                                        <option value="">-- Seleccione el Tipo --</option>
                                    </select>
                                    <label asp-for="IdTipoEncuentro" class="form-label">
                                        <i class="fas fa-stethoscope me-2"></i>Tipo de Encuentro
                                    </label>
                                    <span asp-validation-for="IdTipoEncuentro" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="IdProfesional" class="form-select form-select-lg" asp-items="@ViewBag.ListaProfesionales">
                                        <option value="">-- (Opcional) --</option>
                                    </select>
                                    <label asp-for="IdProfesional" class="form-label">
                                        <i class="fas fa-user-md me-2"></i>Profesional Asignado
                                    </label>
                                    <span asp-validation-for="IdProfesional" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="FechaHoraInicio" type="datetime-local" class="form-control form-control-lg" required />
                                    <label asp-for="FechaHoraInicio" class="form-label">
                                        <i class="fas fa-clock me-2"></i>Fecha y Hora de Inicio
                                    </label>
                                    <span asp-validation-for="FechaHoraInicio" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Estado" type="text" class="form-control form-control-lg" placeholder="Ej: Cerrado" required />
                                    <label asp-for="Estado" class="form-label">
                                        <i class="fas fa-info-circle me-2"></i>Estado del Encuentro
                                    </label>
                                    <span asp-validation-for="Estado" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <textarea asp-for="Notas" class="form-control" style="height: 58px; padding-top: 1.625rem; padding-bottom: 0.625rem;" placeholder="Notas adicionales (opcional)"></textarea>
                                    <label asp-for="Notas" class="form-label">
                                        <i class="fas fa-sticky-note me-2"></i>Notas (Opcional)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Registrar Encuentro
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .btn {
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}