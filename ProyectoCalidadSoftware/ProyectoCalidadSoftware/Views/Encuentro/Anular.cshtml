@model CapaEntidad.entEncuentro

@{
    ViewData["Title"] = "Anular Encuentro";
}

<style>
    .delete-confirmation {
        max-width: 700px;
        margin: 2rem auto;
        border: 1px solid #dee2e6;
        border-radius: .5rem;
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
    }

    .delete-header {
        background-color: #f8d7da;
        color: #721c24;
        padding: 1.5rem;
        border-bottom: 1px solid #f5c6cb;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
    }

        .delete-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

    .details-list dt {
        font-weight: 600;
    }
</style>

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Anulación</h1>
        <h3 class_fs-5>¿Está seguro de que desea anular este encuentro?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles del Encuentro</h4>
        <dl class="row details-list">

            <dt class="col-sm-4"><i class="bi bi-person"></i> Paciente</dt>
            <dd class="col-sm-8">@Model.NombrePaciente</dd>

            <dt class="col-sm-4"><i class="bi bi-clipboard-pulse"></i> Tipo</dt>
            <dd class="col-sm-8">@Model.TipoEncuentroDesc</dd>

            <dt class="col-sm-4"><i class="bi bi-person-lines-fill"></i> Profesional</dt>
            <dd class="col-sm-8">@Model.NombreProfesional</dd>

            <dt class="col-sm-4"><i class="bi bi-calendar-event"></i> Fecha</dt>
            <dd class="col-sm-8">@Model.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt classs="col-sm-4"><i class="bi bi-check-circle"></i> Estado Actual</dt>
            <dd class="col-sm-8">
                <span class="badge bg-success">@Model.Estado</span>
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción marcará el encuentro como "Anulado".
        </div>

        <form asp-action="Anular" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdEncuentro" />

            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Confirmar Anulación" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>