@model IEnumerable<CapaEntidad.entEncuentro>

@{
    ViewData["Title"] = "Historial de Encuentros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0"><i class="bi bi-file-earmark-medical"></i> @ViewData["Title"]</h1>
        <p class="text-muted mb-0">Consultas y registros de embarazos</p>
    </div>
    <a asp-action="Insertar" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Encuentro
    </a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                <h4 class="text-muted mt-3">No hay encuentros registrados</h4>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Paciente</th>
                            <th>Tipo Encuentro</th>
                            <th>Profesional</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombrePaciente</td>
                                <td>@item.TipoEncuentroDesc</td>
                                <td>@item.NombreProfesional</td>
                                <td>@item.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @{
                                        string clase = item.Estado == "Anulado" ? "text-danger" : "text-success";
                                    }
                                    <span class="@clase fw-semibold">@item.Estado</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.IdEncuentro" class="btn btn-sm btn-outline-primary" title="Ver Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Estado != "Anulado")
                                        {
                                            <a asp-action="Anular" asp-route-id="@item.IdEncuentro" class="btn btn-sm btn-outline-danger" title="Anular Encuentro">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>