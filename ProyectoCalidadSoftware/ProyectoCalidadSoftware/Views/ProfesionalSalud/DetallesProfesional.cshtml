@model CapaEntidad.entProfesionalSalud

@{
    ViewData["Title"] = "Detalles del Profesional";

    // Lógica para el color del "badge" de estado
    var estadoClase = Model.Estado ? "bg-success" : "bg-secondary";
    var estadoTexto = Model.Estado ? "Activo" : "Inactivo";
}

<style>
    .details-list dt {
        font-weight: 600;
        color: #555;
    }

    .details-list dd {
        font-size: 1.05rem;
        color: #222;
        margin-bottom: .5rem;
    }

        .details-list dd:empty::after {
            content: "-- No registrado --";
            font-size: 1rem;
            font-style: italic;
            color: #999;
        }

    .card-header .bi {
        font-size: 1.5rem;
        vertical-align: middle;
        margin-right: 0.5rem;
        color: var(--bs-primary);
    }
</style>

<h1 class="display-6">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-light-subtle">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <div>
                    <h4 class="mb-0 text-primary">
                        <i class="bi bi-person-badge-fill"></i>
                        @Html.DisplayFor(model => model.Nombres) @Html.DisplayFor(model => model.Apellidos)
                    </h4>
                    <span class="text-muted">@Html.DisplayFor(model => model.Especialidad)</span>
                </div>
                <span class="badge @estadoClase fs-6">@estadoTexto</span>
            </div>

            <div class="card-body p-4">
                <dl class="row details-list">
                    <dt class="col-sm-4"><i class="bi bi-file-medical me-2 text-muted"></i>@Html.DisplayNameFor(model => model.CMP)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CMP)</dd>

                    <dt class="col-sm-4"><i class="bi bi-key-fill me-2 text-muted"></i>@Html.DisplayNameFor(model => model.IdProfesional)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdProfesional)</dd>

                    <dt class="col-sm-4"><i class="bi bi-person-circle me-2 text-muted"></i>@Html.DisplayNameFor(model => model.IdUsuario)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdUsuario)</dd>
                </dl>
            </div>

            <div class="card-footer bg-light text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-2"></i>Volver a la Lista
                </a>
                <a asp-action="EditarProfesional" asp-route-id="@Model.IdProfesional" class="btn btn-warning">
                    <i class="bi bi-pencil-fill me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>