@model IEnumerable<CapaEntidad.entProfesionalSalud>

@{
    ViewData["Title"] = "Profesionales de Salud";

    // Lógica para el botón de filtro
    bool mostrandoActivos = ViewBag.MostrandoActivos ?? true;
    string botonTexto = mostrandoActivos ? "Mostrar Inhabilitados" : "Mostrar Habilitados";
    string botonIcono = mostrandoActivos ? "bi-eye-slash" : "bi-eye";
    string botonClase = mostrandoActivos ? "btn-outline-danger" : "btn-outline-primary";
    bool proximoEstado = !mostrandoActivos;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6 mb-0">@ViewData["Title"]</h1>
    <a asp-action="InsertarProfesional" class="btn btn-success shadow-sm">
        <i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted">Personal Registrado</h5>
        <a asp-action="Index" asp-route-mostrarActivos="@proximoEstado" class="btn @botonClase btn-sm">
            <i class="bi @botonIcono me-2"></i>@botonTexto
        </a>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="alert alert-info m-3" role="alert">
                No hay profesionales que coincidan con el filtro actual.
            </div>
        }
        else
        {
            <div class="table-responsive-sm">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.CMP)</th>
                            <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Estado)</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var estadoClase = item.Estado ? "bg-success" : "bg-secondary";
                            var estadoTexto = item.Estado ? "Activo" : "Inactivo";

                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                                <td>@Html.DisplayFor(modelItem => item.CMP)</td>
                                <td>@Html.DisplayFor(modelItem => item.Especialidad)</td>
                                <td class="text-center">
                                    <span class="badge @estadoClase">@estadoTexto</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="EditarProfesional" asp-route-id="@item.IdProfesional" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="DetallesProfesional" asp-route-id="@item.IdProfesional" class="btn btn-sm btn-outline-info" title="Detalles">
                                        <i class="bi bi-search"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>