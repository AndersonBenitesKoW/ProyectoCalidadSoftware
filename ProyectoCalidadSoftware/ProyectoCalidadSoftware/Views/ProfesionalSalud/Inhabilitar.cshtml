@model CapaEntidad.entProfesionalSalud

@{
    ViewData["Title"] = "Inhabilitar Profesional";
}

<style>
    .delete-confirmation {
        max-width: 700px;
        margin: 2rem auto;
        border: 1px solid #dee2e6;
        border-radius: .5rem;
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
    }

    .delete-header {
        background-color: #f8d7da; /* Color de alerta de peligro */
        color: #721c24;
        padding: 1.5rem;
        border-bottom: 1px solid #f5c6cb;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
    }

        .delete-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

    .details-list dt {
        font-weight: 600;
    }
</style>

<div class="delete-confirmation">
    <div class="delete-header">
        <h1><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Inhabilitación</h1>
        <h3 class_fs-5>¿Está seguro de que desea inhabilitar a este profesional?</h3>
    </div>

    <div class="p-4">
        <h4 class="mb-4"><i class="bi bi-info-circle"></i> Detalles del Profesional</h4>
        <dl class="row details-list">

            <dt class="col-sm-4"><i class="bi bi-person-badge"></i> Profesional</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombres) @Html.DisplayFor(model => model.Apellidos)</dd>

            <dt class="col-sm-4"><i class="bi bi-file-medical"></i> CMP</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CMP)</dd>

            <dt class="col-sm-4"><i class="bi bi-star"></i> Especialidad</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Especialidad)</dd>

            <dt class="col-sm-4"><i class="bi bi-envelope-at"></i> Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailPrincipal)</dd>

            <dt class="col-sm-4"><i class="bi bi-phone"></i> Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TelefonoPrincipal)</dd>

            <dt class="col-sm-4"><i class="bi bi-check-circle"></i> Estado</dt>
            <dd class="col-sm-8">
                @if (Model.Estado)
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                }
                else
                {
                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                }
            </dd>
        </dl>

        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Advertencia:</strong> Esta acción inhabilitará al profesional y su cuenta de usuario.
        </div>

        <form asp-action="Inhabilitar" method="post" class="mt-4">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="IdProfesional" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <input type="submit" value="Inhabilitar Profesional" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>